<div class="m-form-ask-question m:hidden" data-color-scheme="m-color-{{ settings.drawer_popup_color_scheme }}">
  {% form 'contact', id: 'contact-form-ask' %}
    <input type="hidden" name="contact[product]" value="{{ product.title }}">
    <input type="hidden" name="contact[product url]" value="{{ shop.url }}{{ product.url }}">
    <div class="m-form-ask-question__wrapper">
      <h3 class="m-form-ask-question__title">{{ 'contact.ask-form.heading' | t }}</h3>
      <input
        type="text"
        class="form-field form-field--input"
        name="contact[name]"
        required
        placeholder="{{ 'contact.ask-form.name' | t }}*"
      >
      <input type="text" class="form-field form-field--input" name="contact[phone]" placeholder="{{ 'contact.ask-form.phone' | t }}">
      <input
        type="email"
        class="form-field form-field--input"
        name="contact[email]"
        required
        autocorrect="off"
        placeholder="{{ 'contact.ask-form.email' | t }}*"
      >
      <textarea
        class="form-field form-field--input"
        name="contact[question]"
        rows="4"
        required
        placeholder="{{ 'contact.ask-form.message' | t }}*"
      ></textarea>
      <p class="m-form-ask-question__note m:text-left m:text-color-subtext">* {{ 'contact.ask-form.required-fields' | t }}</p>
      <button type="submit" class="m-button m-button--primary">{{ 'contact.ask-form.send' | t }}</button>
    </div>
    {% if form.posted_successfully? %}
      <div
        class="form-ask__success"
        data-message="{{ 'contact.ask-form.post_success' | t }}"
      ></div>
    {% endif %}
  {% endform %}
</div>
