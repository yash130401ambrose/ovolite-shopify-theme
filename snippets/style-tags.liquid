  <noscript>{{ 'gift-wrapping.css' | asset_url | stylesheet_tag }}</noscript>
{%- endif -%}
<link rel="stylesheet" href="{{ 'custom-style.css' | asset_url }}" media="print" onload="this.media='all'">
