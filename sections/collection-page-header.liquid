      ]
    },
    {
      "type": "header",
      "content": "Breadcrumb"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "outside",
      "options": [
        {
          "value": "outside",
          "label": "Breadcrumb outside"
        },
        {
          "value": "outside_no_border",
          "label": "Breadcrumb outside no border"
        },
        {
          "value": "inside",
          "label": "Breadcrumb inside"
        },
        {
          "value": "without_breadcrumb",
          "label": "Without breadcrumb"
        }
      ]
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "default": "top",
      "options": [
