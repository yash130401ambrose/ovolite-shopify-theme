<style>
.embroidery-modal { /* Modal styles */ }
.embroidery-modal-content { display: flex; flex-wrap: wrap; background: #fff; border-radius: 8px; padding: 24px; }
.embroidery-preview { flex: 1; min-width: 200px; background: #888; color: #fff; display: flex; flex-direction: column; align-items: center; justify-content: center; }
