  .embroidery-modal-content { flex-direction: column; }
  .embroidery-form { padding: 0; }
}
</style>

<script>
const embroideryToggle = document.querySelectorAll('input[name="embroidery"]');
const embroideryModal = document.getElementById('embroidery-modal');
const embroideryName = document.getElementById('embroidery-name');
const embroiderySecond = document.getElementById('embroidery-second');
const previewFirst = document.getElementById('embroidery-preview-first');
const previewSecond = document.getElementById('embroidery-preview-second');
const embroideryApply = document.getElementById('embroidery-apply');
const embroideryReset = document.getElementById('embroidery-reset');

let embroideryData = null;
const DUMMY_PRODUCT_ID = 8073149808834;

function openModal() { embroideryModal.style.display = 'block'; }
function closeModal() { embroideryModal.style.display = 'none'; }

embroideryToggle.forEach(radio => {
  radio.addEventListener('change', function() {
    if (this.value === 'yes') openModal();
    else {
      embroideryData = null;
      removeEmbroideryFromCart();
    }
  });
});

embroideryName.addEventListener('input', updatePreview);
embroiderySecond.addEventListener('input', updatePreview);

function updatePreview() {
  previewFirst.textContent = embroideryName.value;
  previewSecond.textContent = embroiderySecond.value;
}

embroideryApply.addEventListener('click', function() {
  if (!embroideryName.value.trim()) {
    embroideryName.focus();
    return;
  }
  embroideryData = {
    name: embroideryName.value.trim(),
    second: embroiderySecond.value.trim()
  };
  addEmbroideryToCart(embroideryData);
  closeModal();
});

embroideryReset.addEventListener('click', function() {
  embroideryName.value = '';
  embroiderySecond.value = '';
  updatePreview();
  embroideryData = null;
  removeEmbroideryFromCart();
  closeModal();
  document.querySelector('input[name="embroidery"][value="no"]').checked = true;
});

function addEmbroideryToCart(data) {
  // Add dummy product with properties
  fetch('/cart/add.js', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      id: DUMMY_PRODUCT_ID,
      quantity: 1,
      properties: {
        'Embroidery': `${data.name}${data.second ? '\n' + data.second : ''}`
      }
    })
  }).then(() => location.reload());
}

function removeEmbroideryFromCart() {
  fetch('/cart.js')
    .then(res => res.json())
    .then(cart => {
      const embroideryItem = cart.items.find(item => item.product_id == DUMMY_PRODUCT_ID);
      if (embroideryItem) {
        fetch('/cart/change.js', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({ line: embroideryItem.key, quantity: 0 })
        }).then(() => location.reload());
      }
    });
}
</script>

