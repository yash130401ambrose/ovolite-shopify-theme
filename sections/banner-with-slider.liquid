            }}
          </div>
        {% endif %}
      </div>
    </a>
    <div class="m-banner-with-slider__banner-content{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
      {% if section.settings.button_text_1 != blank %}
        <a
          href="{{ section.settings.button_link_1 | default: '#' }}"
          class="m-button {{ section.settings.button_style_1 | replace: 'sf__btn-primary', 'm-button--primary' | replace: 'sf__btn-secondary', 'm-button--secondary' | replace: 'sf__btn-link', 'm-button--link' | replace: 'sf__btn-white', 'm-button--white' }} {{ section.settings.button_size_1 }}"
          {% if animated %}
            data-cascade
            style="--animation-order: 1;"
          {% endif %}
        >
          {{ section.settings.button_text_1 }}
        </a>
      {% endif %}
    </div>
  </div>
  <div class="m-banner-with-slider__slider">
    <div class="m-slider m:h-full">
      <div class="m-slider-{{ section.id }} swiper-container swiper--equal-height m:h-full">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% liquid
              assign content_positions = block.settings.content_position | split: ' '
              assign text_alignment = block.settings.text_alignment
              assign text_horizontal_alignment = content_positions.first
              assign text_vertical_alignment = content_positions.last | strip

              assign block_classes = ' m-gradient m-color-' | append: block.settings.color_scheme

              assign text_color = block.settings.content_text_color

              assign heading_color = ''
              assign desc_color = 'm:text-color-subtext'
              if text_color != 'inherit'
                assign heading_color = heading_color | append: 'm:text-' | append: text_color
                assign desc_color = 'm:text-' | append: text_color
              endif
            %}
            <div
              {{ block.shopify_attributes }}
              data-slide="{{ forloop.index0 }}"
              class="{{ block_classes }} swiper-slide m-bg-lazy"
            >
              <div class="m-slide m-slide--{{ text_vertical_alignment }}-{{ text_horizontal_alignment }} m-slide--text-small">
                <div class="m-slide__media m:h-full">
                  {% if block.settings.item_image != blank %}
                    {% render 'responsive-image',
                      image: block.settings.item_image,
                      section_index: section.index,
                      index: forloop.index,
                      wrapper_class: 'm:w-full m:h-full'
                    %}
                  {% else %}
                    {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
                    {{
                      'collection-'
                      | append: current
                      | placeholder_svg_tag: 'm-placeholder-svg m:w-full m:h-full m:object-cover m-image'
                    }}
                  {% endif %}
                </div>
                <div class="m-slide__wrapper{% if animated %} m-slide-animate--{{ animation_effect }}{% endif %}">
                  <div class="m-richtext m-richtext--{{ block.settings.text_size | replace: 'h3', 'small' }} m-slide__content m:text-{{ text_alignment }}">
                    {% if block.settings.subheading != blank %}
