                        {{ block.settings.description }}
                      </div>
                    {% endif %}

                    {% if block.settings.button_text != blank %}
                      <div class="m-richtext__button m-slide__button">
                        <a
                          href="{{ block.settings.button_link | default: "#" }}"
                          class="m-button {{ block.settings.button_style | replace: 'sf__btn-primary', 'm-button--primary' | replace: 'sf__btn-secondary', 'm-button--secondary' | replace: 'sf__btn-link', 'm-button--link' | replace: 'sf__btn-white', 'm-button--white' }} {{ block.settings.button_size }}"
                        >
                          {{- block.settings.button_text -}}
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
