            section_index: section.index,
            index: 1,
            wrapper_class: 'm:w-full m:h-full'
          %}
        {% else %}
          <div class="m-placeholder-wrapper m:h-full m:w-full">
            {{
              'collection-4'
              | placeholder_svg_tag: 'm-placeholder-svg m-placeholder-svg--no-border m:w-full m:h-full m:object-cover'
            }}
          </div>
        {% endif %}
      </div>
      <div class="md:m:hidden">
        {% if banner_image_mobile_1 %}
          {% render 'responsive-image',
            image: banner_image_mobile_1,
            wrapper_class: 'm:w-full m:h-full'
