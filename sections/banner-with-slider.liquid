<script src="{{ 'banner-with-slider.js' | asset_url }}" defer="defer"></script>

{% liquid
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif

  assign container = section.settings.container
  if container == 'w-full'
    assign container = 'container-full'
  endif

  assign classes = 'm-section m-banner-with-slider'
  if section.settings.custom_class != blank
    assign classes = classes | append: ' ' | append: section.settings.custom_class
  endif
  assign classes = classes | append: ' m-gradient' | append: ' m-color-' | append: section.settings.color_scheme

  assign wrapper_class = 'md:m:grid'
  case section.settings.layout
    when 'layout-1'
      assign wrapper_class = wrapper_class | append: ' md:m:grid-4-cols'
      assign classes = classes | append: ' m-banner-with-slider--layout-1'
    else
      assign wrapper_class = wrapper_class | append: ' md:m:grid-2-cols'
      assign classes = classes | append: ' m-banner-with-slider--layout-2'
  endcase

  assign scroll_mobile_class = 'm-mixed-layout'
  if section.settings.use_scroll_mobile
    assign scroll_mobile_class = scroll_mobile_class | append: ' m-mixed-layout--mobile-scroll'
  else
    assign scroll_mobile_class = scroll_mobile_class | append: ' m-mixed-layout--mobile-grid'
  endif

  assign slide_control_class = 'bottom-' | append: section.settings.pagination_position

  assign banner_image_mobile_1 = section.settings.banner_image_mobile_1
  if banner_image_mobile_1 == blank
    assign banner_image_mobile_1 = section.settings.banner_image_1
  endif

  assign banner_image_mobile_2 = section.settings.banner_image_mobile_2
  if banner_image_mobile_2 == blank
    assign banner_image_mobile_2 = section.settings.banner_image_2
  endif

  assign banner_image_mobile_3 = section.settings.banner_image_mobile_3
  if banner_image_mobile_3 == blank
    assign banner_image_mobile_3 = section.settings.banner_image_3
  endif

  assign banner_image_mobile_4 = section.settings.banner_image_mobile_4
  if banner_image_mobile_4 == blank
    assign banner_image_mobile_4 = section.settings.banner_image_4
  endif
%}
<style>
  #m-banner-with-slider-{{ section.id }} {
    --items: 1;
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
