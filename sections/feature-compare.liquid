{% comment %}
Ovolite Feature Compare Section
Fully customizable — all text, colors, images from theme editor
Includes custom smiley/icon upload, logo image for left column, and editable colors
{% endcomment %}

<section id="feature-compare-{{ section.id }}" class="feature-compare-section">
  <style>
    #feature-compare-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
      padding: clamp(120px, 16vw, 200px) 20px clamp(56px, 10vw, 96px);
      box-sizing: border-box;
      position: relative;
      overflow: hidden;
      --fc-icon-width: {{ section.settings.icon_wrap_width | default: 60 }}px;
      --fc-icon-height: {{ section.settings.icon_wrap_height | default: 48 }}px;
      --fc-ribbon-color: {{ section.settings.ribbon_color | default: section.settings.card_color }};
      --fc-ribbon-angle: {{ section.settings.ribbon_angle | default: -3 }}deg;
      --fc-ribbon-width: {{ section.settings.ribbon_width | default: 420 }}px;
      --fc-ribbon-height: {{ section.settings.ribbon_height | default: 120 }}px;
      --fc-ribbon-top: {{ section.settings.badge_top_offset | default: 16 }}px;
    }

    .fc-container {
      max-width: 1280px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 48px;
      align-items: center;
    }

    @media (max-width: 900px) {
      .fc-container { grid-template-columns: 1fr; gap: 32px; }
    }

    /* Left Image Card */
    .fc-image-card {
      background: {{ section.settings.card_color }};
      border-radius: 12px;
      padding: clamp(24px, 5vw, 36px);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    }

    .fc-image-card img {
      width: 100%;
      border-radius: 10px;
      object-fit: cover;
    }

    /* Overhead ribbon and icon */
    .feature-compare-section__badge {
      position: absolute;
      top: var(--fc-ribbon-top);
      left: 50%;
      transform: translate(-50%, 0);
      z-index: 3;
      pointer-events: none;
      width: 100%;
      display: flex;
      justify-content: center;
    }

    .feature-compare-section__badge-body {
      position: relative;
      width: min(var(--fc-ribbon-width), 90vw);
      height: min(var(--fc-ribbon-height), 26vw);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .feature-compare-section__badge-shape {
      position: absolute;
      inset: 0;
      background: var(--fc-ribbon-color);
      border-radius: clamp(28px, 6vw, 60px);
      transform: rotate(var(--fc-ribbon-angle));
      box-shadow: 0 20px 45px rgba(0, 0, 0, 0.08);
      transition: transform 0.4s ease, background 0.4s ease, border-radius 0.3s ease;
    }

    .feature-compare-section__badge-icon {
      position: relative;
      width: clamp(72px, 8vw, 110px);
      height: clamp(72px, 8vw, 110px);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
      animation: floaty 4s ease-in-out infinite;
      pointer-events: auto;
    }

    .feature-compare-section__badge-icon img {
      width: 64%;
      height: 64%;
      object-fit: contain;
    }

    .fc-smiley { display: none; }

    @keyframes floaty {
      0%, 100% { transform: translateY(-2px); }
      50% { transform: translateY(-8px); }
    }

    /* Right Content */
    .fc-content { text-align: left; }

    .fc-title {
      font-size: 42px;
      font-weight: 700;
      color: {{ section.settings.heading_color }};
      margin-bottom: 10px;
    }

    .fc-sub {
      font-size: 18px;
      line-height: 1.5;
      margin-bottom: 30px;
      color: {{ section.settings.text_color }};
    }

    /* Table / Comparison */
    .fc-table {
      width: 100%;
      border-collapse: collapse;
    }

    :root {
      --fc-anim-duration: {{ section.settings.row_animation_duration | default: 0.6 }}s;
      --fc-icon-anim-duration: {{ section.settings.icon_animation_duration | default: 0.4 }}s;
      --fc-row-delay-step: {{ section.settings.row_delay_step | default: 0.1 }}s;
    }

    .fc-row {
      display: grid;
      grid-template-columns: 1fr 100px 100px;
      align-items: center;
      gap: 20px;
      padding: 14px 0;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      opacity: 1;
      transform: none;
      transition: opacity var(--fc-anim-duration) ease, transform var(--fc-anim-duration) ease;
    }

    @media (max-width: 600px) {
      .fc-row { grid-template-columns: 1fr 80px 80px; gap: 10px; }
      .fc-title { font-size: 32px; }
    }

    .fc-row[data-animate] {
      opacity: 0;
    }

    .fc-row.fc-anim--slide-up[data-animate] { transform: translateY(24px); }
    .fc-row.fc-anim--slide-left[data-animate] { transform: translateX(-40px); }
    .fc-row.fc-anim--slide-right[data-animate] { transform: translateX(40px); }
    .fc-row.fc-anim--zoom[data-animate] { transform: scale(0.94); }
    .fc-row.fc-anim--fade[data-animate] { transform: none; }

    .play .fc-row[data-animate] {
      opacity: 1;
      transform: translate3d(0,0,0);
    }

    .fc-benefit {
      font-size: 16px;
    }

    .fc-col {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      text-align: center;
    }

    .fc-icon-wrap {
      width: var(--fc-icon-width, 60px);
      height: var(--fc-icon-height, 48px);
      border-radius: 8px;
      background: #E6EDFF;
      display: flex;
      align-items: center;
      justify-content: center;
      transform: translateY(0);
      transition: transform var(--fc-anim-duration) cubic-bezier(.2,.9,.3,1), box-shadow var(--fc-anim-duration) ease;
    }

    /* Animated Icons */
    .fc-check, .fc-cross {
      width: 20px;
      height: 20px;
      transform-origin: center;
    }

    .play .fc-row[data-animate] .fc-icon-wrap {
      transform: translateY(-6px);
      box-shadow: 0 8px 18px rgba(0, 64, 255, 0.12);
    }

    .play .fc-check {
      animation: pop var(--fc-icon-anim-duration) cubic-bezier(.2,.9,.3,1) forwards;
    }
    .play .fc-cross {
      animation: shake var(--fc-icon-anim-duration) cubic-bezier(.2,.9,.3,1) forwards;
    }

    @media (max-width: 768px) {
      .fc-col {
        gap: 4px;
      }
      .fc-icon-wrap {
        width: max(32px, calc(var(--fc-icon-width, 60px) * 0.85));
        height: max(24px, calc(var(--fc-icon-height, 48px) * 0.85));
      }
    }

    @media (max-width: 480px) {
      .fc-icon-wrap {
        width: max(30px, calc(var(--fc-icon-width, 60px) * 0.75));
        height: max(22px, calc(var(--fc-icon-height, 48px) * 0.75));
      }
    }

    @keyframes pop {
      0% { transform: scale(0.2); opacity: 0; }
      60% { transform: scale(1.15); opacity: 1; }
      100% { transform: scale(1); }
    }

    @keyframes shake {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-10deg); }
      75% { transform: rotate(10deg); }
    }

    /* Table Header */
    .fc-row.header {
      border-bottom: 2px solid {{ section.settings.accent_color }};
      font-weight: 600;
      font-size: 15px;
    }

    .fc-logo img {
      max-height: 24px;
      max-width: 100px;
      object-fit: contain;
    }
  </style>

  {% if section.settings.icon_image != blank %}
    <div class="feature-compare-section__badge">
      <div class="feature-compare-section__badge-body">
        <div class="feature-compare-section__badge-shape"></div>
        <div class="feature-compare-section__badge-icon">
          <img src="{{ section.settings.icon_image | img_url: '200x' }}" alt="Feature icon" />
        </div>
      </div>
    </div>
  {% endif %}

  <div class="fc-container">
    <!-- Left Side -->
    <div class="fc-image-card">
      {% if section.settings.left_image != blank %}
        <img src="{{ section.settings.left_image | img_url: '800x' }}" alt="Feature image" />
      {% endif %}
    </div>

    <!-- Right Side -->
    <div class="fc-content">
      <h2 class="fc-title">{{ section.settings.heading }}</h2>
      <div class="fc-sub">{{ section.settings.subtext }}</div>

      <div class="fc-table">
        <div class="fc-row header">
          <div></div>
          <div class="fc-col fc-logo">
            {% if section.settings.left_logo != blank %}
              <img src="{{ section.settings.left_logo | img_url: '200x' }}" alt="Left Logo" />
            {% endif %}
          </div>
          <div class="fc-col">{{ section.settings.right_label }}</div>
        </div>

        {% assign animation_style = section.settings.row_animation_style | default: 'slide-up' %}
        {% for block in section.blocks %}
        {% assign delay = forloop.index0 | times: section.settings.row_delay_step | default: 0.1 %}
          {% capture row_style %}
            transition-delay: {{ delay | round: 2 }}s;
          {% endcapture %}
          <div class="fc-row fc-anim--{{ animation_style }}" data-animate style="{{ row_style | strip }}">
            <div class="fc-benefit">{{ block.settings.benefit }}</div>
            <div class="fc-col">
              <div class="fc-icon-wrap">
                {% if block.settings.left_has %}
                  <svg class="fc-check" viewBox="0 0 24 24" fill="none">
                    <path d="M6 12.5l3 3 8-8" stroke="{{ section.settings.accent_color }}" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% else %}
                  <svg class="fc-cross" viewBox="0 0 24 24" fill="none">
                    <path d="M6 6l12 12M6 18L18 6" stroke="#777" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% endif %}
              </div>
            </div>
            <div class="fc-col">
              <div class="fc-icon-wrap">
                {% if block.settings.right_has %}
                  <svg class="fc-check" viewBox="0 0 24 24" fill="none">
                    <path d="M6 12.5l3 3 8-8" stroke="{{ section.settings.accent_color }}" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% else %}
                  <svg class="fc-cross" viewBox="0 0 24 24" fill="none">
                    <path d="M6 6l12 12M6 18L18 6" stroke="#777" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (function(){
      const section = document.getElementById('feature-compare-{{ section.id }}');
      if (!section) return;
      const config = {
        duration: parseFloat(getComputedStyle(section).getPropertyValue('--fc-anim-duration')) || {{ section.settings.row_animation_duration | default: 0.6 }},
        delayStep: {{ section.settings.row_delay_step | default: 0.1 }},
        iconDuration: {{ section.settings.icon_animation_duration | default: 0.4 }}
      };

      const observer = new IntersectionObserver((entries)=>{
        entries.forEach(entry=>{
          if(entry.isIntersecting){
            section.classList.add('play');
            observer.disconnect();
          }
        });
      },{threshold:0.2});
      observer.observe(section);
    })();
  </script>

  {% schema %}
  {
    "name": "Feature Compare Ovolite",
    "settings": [
      { "type": "image_picker", "id": "left_image", "label": "Left Image" },
      { "type": "image_picker", "id": "icon_image", "label": "Smiley/Icon Image" },
      { "type": "image_picker", "id": "left_logo", "label": "Left Column Logo" },
      { "type": "text", "id": "right_label", "label": "Right Column Label", "default": "Regular Matcha" },
      { "type": "text", "id": "heading", "label": "Heading", "default": "More for you. See the difference." },
      { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Compare your product benefits side by side." },
      { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#FFFFFF" },
      { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#0040FF" },
      { "type": "color", "id": "text_color", "label": "Text Color", "default": "#0A0A0A" },
      { "type": "color", "id": "accent_color", "label": "Accent (Tick) Color", "default": "#0040FF" },
      { "type": "color", "id": "card_color", "label": "Left Card Background", "default": "#F5F8FF" },
      { "type": "color", "id": "ribbon_color", "label": "Badge ribbon color", "default": "#F0F6ED" },
      { "type": "range", "id": "ribbon_width", "label": "Ribbon width (px)", "min": 240, "max": 720, "step": 10, "default": 420, "unit": "px" },
      { "type": "range", "id": "ribbon_height", "label": "Ribbon height (px)", "min": 80, "max": 260, "step": 10, "default": 120, "unit": "px" },
      { "type": "range", "id": "ribbon_angle", "label": "Ribbon angle (deg)", "min": -15, "max": 15, "step": 0.5, "default": -3, "unit": "°" },
      { "type": "range", "id": "badge_top_offset", "label": "Badge top offset (px)", "min": 0, "max": 160, "step": 4, "default": 16, "unit": "px" },
      { "type": "range", "id": "icon_wrap_width", "label": "Icon holder width (px)", "min": 32, "max": 120, "step": 1, "default": 60, "unit": "px" },
      { "type": "range", "id": "icon_wrap_height", "label": "Icon holder height (px)", "min": 28, "max": 100, "step": 1, "default": 48, "unit": "px" },
      { "type": "select", "id": "row_animation_style", "label": "Row animation style", "default": "slide-up", "options": [
        { "label": "Slide up", "value": "slide-up" },
        { "label": "Fade in", "value": "fade" },
        { "label": "Zoom in", "value": "zoom" },
        { "label": "Slide left", "value": "slide-left" },
        { "label": "Slide right", "value": "slide-right" }
      ] },
      { "type": "range", "id": "row_animation_duration", "label": "Row animation duration (s)", "min": 0.2, "max": 1.5, "step": 0.1, "default": 0.6 },
      { "type": "range", "id": "icon_animation_duration", "label": "Icon animation duration (s)", "min": 0.2, "max": 1.2, "step": 0.1, "default": 0.4 },
      { "type": "range", "id": "row_delay_step", "label": "Delay between rows (s)", "min": 0, "max": 0.5, "step": 0.1, "default": 0.1 }
    ],
    "blocks": [
      {
        "type": "benefit",
        "name": "Benefit",
        "settings": [
          { "type": "text", "id": "benefit", "label": "Benefit Text", "default": "Low in Carbs" },
          { "type": "checkbox", "id": "left_has", "label": "Left Column Has ✓", "default": true },
          { "type": "checkbox", "id": "right_has", "label": "Right Column Has ✓", "default": false }
        ]
      }
    ],
    "presets": [
      {
        "name": "Feature Compare Ovolite",
        "category": "Image + Text"
      }
    ]
  }
  {% endschema %}
</section>
