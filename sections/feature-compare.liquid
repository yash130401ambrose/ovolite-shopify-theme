{% comment %}
Ovolite Feature Compare Section
Fully customizable — all text, colors, images from theme editor
Includes custom smiley/icon upload, logo image for left column, and editable colors
{% endcomment %}

<section id="feature-compare-{{ section.id }}" class="feature-compare-section" data-right-anim="{{ section.settings.right_icon_animation }}">
  <style>
    #feature-compare-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }};
      padding: clamp(110px, 14vw, 180px) 20px clamp(56px, 10vw, 96px);
      box-sizing: border-box;
      position: relative;
      overflow: hidden;
      --fc-icon-width: {{ section.settings.icon_wrap_width | default: 60 }}px;
      --fc-icon-height: {{ section.settings.icon_wrap_height | default: 48 }}px;
      --fc-icon-size: {{ section.settings.icon_diameter | default: 96 }}px;
      --fc-icon-border: {{ section.settings.icon_border_color | default: section.settings.heading_color }};
      --fc-icon-bg: {{ section.settings.icon_background_color | default: '#ffffff' }};
      --fc-icon-top: {{ section.settings.badge_top_offset | default: 28 }}px;
    }

    .fc-container {
      max-width: 1280px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: minmax(0, 0.95fr) minmax(0, 1.05fr);
      gap: clamp(40px, 6vw, 80px);
      align-items: stretch;
    }

    @media (max-width: 1024px) {
      .fc-container {
        grid-template-columns: 1fr;
        gap: clamp(32px, 8vw, 48px);
      }
    }

    /* Left Image Card */
    .fc-image-card {
      background: {{ section.settings.icon_area_background | default: '#F4F6EE' }};
      border-radius: clamp(24px, 4vw, 36px);
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      min-height: 100%;
      height: 100%;
    }

    .fc-image-card::before {
      content: '';
      position: absolute;
      inset: 0;
      background: {{ section.settings.icon_area_background | default: '#F4F6EE' }};
      z-index: 0;
      border-radius: inherit;
    }

    .fc-image-card--cover::before {
      {% if section.settings.icon_area_image != blank %}
      background-image: url('{{ section.settings.icon_area_image | img_url: '1200x' }}');
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      {% endif %}
    }

    .fc-image-card--contain::before {
      {% if section.settings.icon_area_image != blank %}
      background-image: url('{{ section.settings.icon_area_image | img_url: '800x' }}');
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center;
      {% endif %}
    }

    .fc-image-card__icon {
      position: relative;
      z-index: 1;
      width: clamp(120px, {{ section.settings.icon_area_size | default: 240 }}px, 360px);
      height: auto;
      object-fit: contain;
    }

    /* Top centered icon badge */
    .fc-smiley { display: none; }

    @keyframes floaty {
      0%, 100% { transform: translateY(-2px); }
      50% { transform: translateY(-8px); }
    }

    /* Right Content */
    .fc-content {
      text-align: left;
      display: flex;
      flex-direction: column;
      gap: clamp(20px, 3vw, 32px);
    }

    .fc-title {
      font-size: clamp(56px, 6.5vw, 90px);
      line-height: 0.92;
      font-weight: 700;
      color: {{ section.settings.heading_color }};
      margin: 0;
      letter-spacing: -0.02em;
    }

    .fc-sub {
      font-size: clamp(18px, 2vw, 22px);
      line-height: 1.5;
      color: rgba(36, 82, 38, 0.7);
      margin: 0;
    }

    /* Table / Comparison */
    .fc-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }

    :root {
      --fc-anim-duration: {{ section.settings.row_animation_duration | default: 0.6 }}s;
      --fc-icon-anim-duration: {{ section.settings.icon_animation_duration | default: 0.4 }}s;
      --fc-row-delay-step: {{ section.settings.row_delay_step | default: 0.1 }}s;
    }

    .fc-row {
      display: grid;
      grid-template-columns: minmax(0, 1fr) minmax(0, 140px) minmax(0, 140px);
      align-items: center;
      gap: clamp(16px, 3vw, 32px);
      padding: clamp(18px, 2.8vw, 28px) 0;
      border-bottom: 1px solid rgba(36, 82, 38, 0.18);
      opacity: 1;
      transform: none;
    }

    @media (max-width: 600px) {
      .fc-row {
        grid-template-columns: 1fr 110px 110px;
        gap: 14px;
      }
      .fc-title { font-size: clamp(36px, 10vw, 44px); }
    }

    .fc-row[data-animate] { opacity: 1; transform: none; }

    .fc-row.fc-anim--slide-up[data-animate],
    .fc-row.fc-anim--slide-left[data-animate],
    .fc-row.fc-anim--slide-right[data-animate],
    .fc-row.fc-anim--zoom[data-animate],
    .fc-row.fc-anim--fade[data-animate] {
      transform: none !important;
    }

    .play .fc-row[data-animate] .fc-icon-wrap,
    .play .fc-row[data-animate] .fc-col.is-right .fc-icon-wrap {
      animation: none;
      transform: none;
      box-shadow: none;
    }

    .fc-benefit {
      font-size: clamp(18px, 2vw, 22px);
      color: rgba(36, 82, 38, 0.9);
    }

    .fc-col {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      text-align: center;
      color: rgba(36, 82, 38, 0.9);
    }

    .fc-icon-wrap {
      min-width: clamp(88px, 11vw, 128px);
      padding: clamp(12px, 1.8vw, 18px);
      border-radius: 12px;
      background: rgba(193, 217, 170, 0.24);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: none;
    }

    .fc-col.has-check .fc-icon-wrap {
      background: {{ section.settings.true_icon_background | default: 'rgba(193, 217, 170, 0.24)' }};
    }

    .fc-col.has-cross .fc-icon-wrap {
      background: transparent;
    }

    /* Animated Icons */
    .fc-check, .fc-cross {
      width: 20px;
      height: 20px;
      transform-origin: center;
    }

    .play .fc-row[data-animate] .fc-icon-wrap {
      transform: translateY(-6px);
      box-shadow: 0 10px 24px rgba(36, 82, 38, 0.14);
    }

    .play .fc-check {
      animation: pop var(--fc-icon-anim-duration) cubic-bezier(.2,.9,.3,1) forwards;
    }
    .play .fc-cross {
      animation: shake var(--fc-icon-anim-duration) cubic-bezier(.2,.9,.3,1) forwards;
    }

    .fc-col.is-right .fc-icon-wrap {
    }

    .play .fc-row[data-animate] .fc-col.is-right .fc-icon-wrap {
      animation: fc-shake var(--fc-icon-anim-duration, 0.7s) ease forwards;
    }

    @media (max-width: 768px) {
      .fc-col {
        gap: 4px;
      }
      .fc-icon-wrap {
        width: max(32px, calc(var(--fc-icon-width, 60px) * 0.85));
        height: max(24px, calc(var(--fc-icon-height, 48px) * 0.85));
      }
    }

    @media (max-width: 480px) {
      .fc-icon-wrap {
        width: max(30px, calc(var(--fc-icon-width, 60px) * 0.75));
        height: max(22px, calc(var(--fc-icon-height, 48px) * 0.75));
      }
    }

    @keyframes pop {
      0% { transform: scale(0.2); opacity: 0; }
      60% { transform: scale(1.15); opacity: 1; }
      100% { transform: scale(1); }
    }

    @keyframes shake {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-10deg); }
      75% { transform: rotate(10deg); }
    }

    @keyframes fc-shake {
      0%, 100% { transform: rotate(0deg); }
      20% { transform: rotate(-10deg); }
      50% { transform: rotate(12deg); }
      80% { transform: rotate(-6deg); }
    }

    /* Table Header */
    .fc-row.header {
      border-bottom: 1px solid rgba(36, 82, 38, 0.3);
      font-weight: 600;
      font-size: 15px;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgba(36, 82, 38, 0.65);
      padding: clamp(14px, 2vw, 20px) 0;
    }

    .fc-row.header .fc-col {
      justify-content: center;
    }

    .fc-logo img {
      max-height: {{ section.settings.right_icon_size | default: 36 }}px;
      max-width: {{ section.settings.right_icon_size | default: 36 }}px;
      object-fit: contain;
      display: block;
      margin: 0 auto;
    }

    /* Right icon animation styles */
    #feature-compare-{{ section.id }}.play .fc-row.fc-row--anim-shake .fc-col.is-right.has-check .fc-icon-wrap {
      animation: fc-shake 2.2s ease-in-out forwards;
    }

    #feature-compare-{{ section.id }}.play .fc-row.fc-row--anim-bounce .fc-col.is-right.has-check .fc-icon-wrap {
      animation: fc-bounce 2.4s cubic-bezier(.32,.75,.4,1) forwards;
    }

    #feature-compare-{{ section.id }}.play .fc-row.fc-row--anim-flip .fc-col.is-right.has-check .fc-icon-wrap {
      animation: fc-flip 2.4s ease-in-out forwards;
    }

    #feature-compare-{{ section.id }}.play .fc-row.fc-row--anim-pulse .fc-col.is-right.has-check .fc-icon-wrap {
      animation: fc-pulse 2.2s ease-in-out forwards;
    }

    #feature-compare-{{ section.id }}.play .fc-row.fc-row--anim-swing .fc-col.is-right.has-check .fc-icon-wrap {
      animation: fc-swing 2.4s ease-in-out forwards;
    }
  </style>

  <div class="fc-container">
    <!-- Left Side -->
    <div class="fc-image-card fc-image-card--{{ section.settings.icon_area_mode | default: 'cover' }}">
      {% assign fc_mode = section.settings.icon_area_mode | default: 'cover' %}
      {% if fc_mode == 'contain' and section.settings.icon_area_image != blank %}
        <img class="fc-image-card__icon" src="{{ section.settings.icon_area_image | img_url: '600x' }}" alt="Feature icon" />
      {% endif %}
    </div>

    <!-- Right Side -->
    <div class="fc-content">
      <h2 class="fc-title">{{ section.settings.heading }}</h2>
      <div class="fc-sub">{{ section.settings.subtext }}</div>

      <div class="fc-table">
        <div class="fc-row header">
          <div></div>
          <div class="fc-col fc-logo">
            {% if section.settings.left_logo != blank %}
              <img src="{{ section.settings.left_logo | img_url: '200x' }}" alt="Left Logo" />
            {% endif %}
          </div>
          <div class="fc-col">{{ section.settings.right_label }}</div>
        </div>

        {% assign animation_style = section.settings.row_animation_style | default: 'slide-up' %}
        {% for block in section.blocks %}
        {% assign delay = forloop.index0 | times: section.settings.row_delay_step | default: 0.1 %}
          {% capture row_style %}
            transition-delay: {{ delay | round: 2 }}s;
          {% endcapture %}
          <div class="fc-row fc-anim--{{ animation_style }} fc-row--anim-{{ section.settings.right_icon_animation }}" data-animate style="{{ row_style | strip }}">
            <div class="fc-benefit">{{ block.settings.benefit }}</div>
            <div class="fc-col {% if block.settings.left_has %}has-check{% else %}has-cross{% endif %}">
              <div class="fc-icon-wrap">
                {% if block.settings.left_has %}
                  <svg class="fc-check" viewBox="0 0 24 24" fill="none">
                    <path d="M6 12.5l3 3 8-8" stroke="{{ section.settings.accent_color }}" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% else %}
                  <svg class="fc-cross" viewBox="0 0 24 24" fill="none">
                    <path d="M6 6l12 12M6 18L18 6" stroke="#777" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% endif %}
              </div>
            </div>
            <div class="fc-col is-right {% if block.settings.right_has %}has-check{% else %}has-cross{% endif %}">
              <div class="fc-icon-wrap">
                {% if block.settings.right_has %}
                  <svg class="fc-check" viewBox="0 0 24 24" fill="none">
                    <path d="M6 12.5l3 3 8-8" stroke="{{ section.settings.accent_color }}" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% else %}
                  <svg class="fc-cross" viewBox="0 0 24 24" fill="none">
                    <path d="M6 6l12 12M6 18L18 6" stroke="#777" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (function(){
      const section = document.getElementById('feature-compare-{{ section.id }}');
      if (!section) return;

      const shouldAnimate = section.dataset.rightAnim && section.dataset.rightAnim !== 'none';
      if (!shouldAnimate) return;

      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            section.classList.add('play');
            observer.disconnect();
          }
        });
      }, { threshold: 0.25 });

      observer.observe(section);
    })();
  </script>

  {% schema %}
  {
    "name": "Feature Compare Ovolite",
    "settings": [
      { "type": "image_picker", "id": "icon_area_image", "label": "Left icon image" },
      { "type": "select", "id": "icon_area_mode", "label": "Left image display", "default": "cover", "options": [
        { "value": "cover", "label": "Cover (full bleed)" },
        { "value": "contain", "label": "Contain (centered icon)" }
      ] },
      { "type": "image_picker", "id": "left_logo", "label": "Left Column Logo" },
      { "type": "text", "id": "right_label", "label": "Right Column Label", "default": "Regular Matcha" },
      { "type": "text", "id": "heading", "label": "Heading", "default": "More for you. See the difference." },
      { "type": "color", "id": "icon_area_background", "label": "Left icon background", "default": "#F4F6EE" },
      { "type": "range", "id": "icon_area_size", "label": "Left icon size (px)", "min": 120, "max": 360, "step": 10, "default": 240 },
      { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#FFFFFF" },
      { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#0040FF" },
      { "type": "color", "id": "text_color", "label": "Text Color", "default": "#0A0A0A" },
      { "type": "color", "id": "accent_color", "label": "Accent (Tick) Color", "default": "#0040FF" },
      { "type": "color", "id": "card_color", "label": "Left Card Background", "default": "#F5F8FF" },
      { "type": "color", "id": "icon_background_color", "label": "Icon background color", "default": "#FFFFFF" },
      { "type": "color", "id": "icon_border_color", "label": "Icon border color", "default": "#8CC279" },
      { "type": "range", "id": "icon_diameter", "label": "Icon diameter (px)", "min": 64, "max": 160, "step": 4, "default": 96, "unit": "px" },
      { "type": "range", "id": "badge_top_offset", "label": "Icon vertical offset (px)", "min": 0, "max": 160, "step": 4, "default": 28, "unit": "px" },
      { "type": "range", "id": "icon_wrap_width", "label": "Icon holder width (px)", "min": 32, "max": 120, "step": 1, "default": 60, "unit": "px" },
      { "type": "range", "id": "icon_wrap_height", "label": "Icon holder height (px)", "min": 28, "max": 100, "step": 1, "default": 48, "unit": "px" },
      { "type": "color", "id": "true_icon_background", "label": "True icon background", "default": "rgba(193, 217, 170, 0.24)" },
      { "type": "select", "id": "right_icon_animation", "label": "Right icon animation", "default": "shake", "options": [
        { "value": "none", "label": "None" },
        { "value": "shake", "label": "Shake" },
        { "value": "bounce", "label": "Bounce" },
        { "value": "flip", "label": "Flip" },
        { "value": "pulse", "label": "Pulse" },
        { "value": "swing", "label": "Swing" }
      ] },
      { "type": "select", "id": "row_animation_style", "label": "Row animation style", "default": "slide-up", "options": [
        { "label": "Slide up", "value": "slide-up" },
        { "label": "Fade in", "value": "fade" },
        { "label": "Zoom in", "value": "zoom" },
        { "label": "Slide left", "value": "slide-left" },
        { "label": "Slide right", "value": "slide-right" }
      ] },
      { "type": "range", "id": "row_animation_duration", "label": "Row animation duration (s)", "min": 0.2, "max": 1.5, "step": 0.1, "default": 0.6 },
      { "type": "range", "id": "icon_animation_duration", "label": "Icon animation duration (s)", "min": 0.2, "max": 1.2, "step": 0.1, "default": 0.4 },
      { "type": "range", "id": "row_delay_step", "label": "Delay between rows (s)", "min": 0, "max": 0.5, "step": 0.1, "default": 0.1 },
      { "type": "range", "id": "right_icon_size", "label": "Right column icon size (px)", "min": 24, "max": 80, "step": 2, "default": 36 }
    ],
    "blocks": [
      {
        "type": "benefit",
        "name": "Benefit",
        "settings": [
          { "type": "text", "id": "benefit", "label": "Benefit Text", "default": "Low in Carbs" },
          { "type": "checkbox", "id": "left_has", "label": "Left Column Has ✓", "default": true },
          { "type": "checkbox", "id": "right_has", "label": "Right Column Has ✓", "default": false }
        ]
      }
    ],
    "presets": [
      {
        "name": "Feature Compare Ovolite",
        "category": "Image + Text"
      }
    ]
  }
  {% endschema %}
</section>
