{% schema %}
{
  "name": "Focus Text Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "font_picker",
      "id": "subheading_font",
      "label": "Subheading Font",
      "default": "helvetica_n4"
    },
    {
      "type": "select",
      "id": "heading_animation",
      "label": "Heading Animation",
      "options": [
        { "value": "fade-in", "label": "Fade In" },
        { "value": "slide-up", "label": "Slide Up" },
        { "value": "zoom-in", "label": "Zoom In" },
        { "value": "rotate-in", "label": "Rotate In" },
        { "value": "flip-in", "label": "Flip In" }
      ],
      "default": "fade-in"
    },
    {
      "type": "select",
      "id": "subheading_animation",
      "label": "Subheading Animation",
      "options": [
        { "value": "fade-in", "label": "Fade In" },
        { "value": "slide-up", "label": "Slide Up" },
        { "value": "zoom-in", "label": "Zoom In" },
        { "value": "rotate-in", "label": "Rotate In" },
        { "value": "flip-in", "label": "Flip In" }
      ],
      "default": "slide-up"
    }
  ],
  "presets": [
    {
      "name": "Focus Text Section"
    }
  ]
}
{% endschema %}

<section class="focus-text-section" style="background-image:url('{{ section.settings.background_image | img_url: 'master' }}')">
  <div class="overlay"></div>
  <div class="text-container">
    <h2 class="focus-subheading {{ section.settings.subheading_animation }}" style="font-family: {{ section.settings.subheading_font | font_face }};">
      Ways of Using
    </h2>
    <h1 class="focus-heading {{ section.settings.heading_animation }}">
      FOR PROFESSIONAL <br> AND HOME USE · BAKERY · HORECA · CONFECTIONERY
    </h1>
  </div>
</section>

<style>
.focus-text-section {
  position: relative;
  background-size: cover;
  background-position: center;
  padding: 120px 20px;
  text-align: left;
  overflow: hidden;
  color: #000;
}

.focus-text-section .overlay {
  position: absolute;
  inset: 0;
  background: rgba(255,255,255,0.3);
}

.focus-text-section .text-container {
  position: relative;
  z-index: 2;
  max-width: 1000px;
  margin: 0 auto;
}

.focus-subheading {
  font-size: 55px;
  font-weight: 700;
  color: #000;
  margin-bottom: 10px;
  text-transform: none;
  letter-spacing: -1px;
  line-height: 1.1;
}

.focus-heading {
  font-size: 110px;
  font-weight: 900;
  color: transparent;
  background: url('{{ section.settings.background_image | img_url: 'master' }}') no-repeat center;
  background-size: cover;
  -webkit-background-clip: text;
  background-clip: text;
  text-transform: uppercase;
  line-height: 1.05;
  word-wrap: break-word;
  max-width: 100%;
}

/* ------------------------------
   Responsive Design
--------------------------------*/
@media (max-width: 1440px) {
  .focus-heading { font-size: 90px; }
  .focus-subheading { font-size: 48px; }
}

@media (max-width: 1024px) {
  .focus-heading { font-size: 70px; }
  .focus-subheading { font-size: 38px; }
}

@media (max-width: 768px) {
  .focus-text-section { padding: 90px 15px; text-align: center; }
  .focus-heading { font-size: 50px; line-height: 1.1; }
  .focus-subheading { font-size: 32px; margin-bottom: 15px; }
}

@media (max-width: 480px) {
  .focus-heading { font-size: 34px; line-height: 1.2; }
  .focus-subheading { font-size: 24px; margin-bottom: 10px; }
  .focus-text-section { padding: 70px 10px; }
}

/* ------------------------------
   Animations
--------------------------------*/
.fade-in { animation: fadeIn 1.2s ease forwards; opacity: 0; }
.slide-up { animation: slideUp 1s ease forwards; opacity: 0; }
.zoom-in { animation: zoomIn 1s ease forwards; opacity: 0; }
.rotate-in { animation: rotateIn 1s ease forwards; opacity: 0; }
.flip-in { animation: flipIn 1s ease forwards; opacity: 0; }

@keyframes fadeIn {
  to { opacity: 1; }
}
@keyframes slideUp {
  from { transform: translateY(40px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
@keyframes zoomIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}
@keyframes rotateIn {
  from { transform: rotateX(-90deg); opacity: 0; }
  to { transform: rotateX(0); opacity: 1; }
}
@keyframes flipIn {
  from { transform: rotateY(90deg); opacity: 0; }
  to { transform: rotateY(0); opacity: 1; }
}
</style>
