{% schema %}
{
  "name": "Focus Text Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "font_picker",
      "id": "subheading_font",
      "label": "Subheading Font",
      "default": "helvetica_n4"
    },
    {
      "type": "select",
      "id": "heading_animation",
      "label": "Heading Animation",
      "options": [
        { "value": "fade-in", "label": "Fade In" },
        { "value": "slide-up", "label": "Slide Up" },
        { "value": "zoom-in", "label": "Zoom In" },
        { "value": "rotate-in", "label": "Rotate In" },
        { "value": "flip-in", "label": "Flip In" }
      ],
      "default": "fade-in"
    },
    {
      "type": "select",
      "id": "subheading_animation",
      "label": "Subheading Animation",
      "options": [
        { "value": "fade-in", "label": "Fade In" },
        { "value": "slide-up", "label": "Slide Up" },
        { "value": "zoom-in", "label": "Zoom In" },
        { "value": "rotate-in", "label": "Rotate In" },
        { "value": "flip-in", "label": "Flip In" }
      ],
      "default": "slide-up"
    },
    {
      "type": "range",
      "id": "subheading_offset_x",
      "label": "Subheading horizontal offset (px)",
      "min": -300,
      "max": 300,
      "step": 6,
      "default": -132,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_offset_y",
      "label": "Subheading vertical offset (px)",
      "min": -200,
      "max": 200,
      "step": 8,
      "default": -56,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_rotation",
      "label": "Subheading rotation (deg)",
      "min": -30,
      "max": 30,
      "step": 1,
      "default": -6,
      "unit": "°"
    }
  ],
  "presets": [
    {
      "name": "Focus Text Section"
    }
  ]
}
{% endschema %}

<section
  class="focus-text-section"
  style="
    background-image:url('{{ section.settings.background_image | img_url: 'master' }}');
    --focus-subheading-offset-x: {{ section.settings.subheading_offset_x | default: -140 }}px;
    --focus-subheading-offset-y: {{ section.settings.subheading_offset_y | default: -60 }}px;
    --focus-subheading-rotation: {{ section.settings.subheading_rotation | default: -6 }}deg;
  "
>
  <div class="overlay"></div>
  <div class="text-container">
    <h2 class="focus-subheading {{ section.settings.subheading_animation }}" style="font-family: {{ section.settings.subheading_font | font_face }};">
      Ways of Using
    </h2>
    <h1 class="focus-heading {{ section.settings.heading_animation }}">
      FOR PROFESSIONAL <br> AND HOME USE · BAKERY · HORECA · CONFECTIONERY
    </h1>
  </div>
</section>

<style>
.focus-text-section {
    position: relative;
  background-size: cover;
  background-position: center;
  padding: 120px 20px;
  text-align: center;
    overflow: hidden;
  color: #000;
}

.focus-text-section .overlay {
  position: absolute;
  inset: 0;
  background: rgba(255,255,255,0.3);
}

.focus-text-section .text-container {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
  padding-top: 100px;
}

.focus-subheading {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(calc(-50% + var(--focus-subheading-offset-x)), calc(-100% + var(--focus-subheading-offset-y))) rotate(var(--focus-subheading-rotation));
  font-size: clamp(60px, 6vw, 84px);
  font-weight: 700;
  color: #111111;
  text-transform: none;
  letter-spacing: -0.1em;
  line-height: 0.85;
    margin: 0;
  pointer-events: none;
  mix-blend-mode: multiply;
  white-space: nowrap;
}

.focus-heading {
  font-size: clamp(96px, 10vw, 140px);
  font-weight: 900;
    color: transparent;
  background: url('{{ section.settings.background_image | img_url: 'master' }}') no-repeat center;
    background-size: cover;
  -webkit-background-clip: text;
  background-clip: text;
  text-transform: uppercase;
  line-height: 1.05;
  word-wrap: break-word;
  max-width: 100%;
  margin: 0 auto;
}

/* ------------------------------
   Responsive Design
--------------------------------*/
@media (max-width: 1024px) {
  .focus-text-section { padding: 110px 18px; }
  .focus-text-section .text-container { padding-top: 80px; }
  .focus-subheading { font-size: clamp(48px, 8vw, 64px); }
  .focus-heading { font-size: clamp(72px, 9vw, 110px); }
}

  @media (max-width: 768px) {
  .focus-text-section { padding: 90px 16px; }
  .focus-text-section .text-container { padding-top: 70px; }
  .focus-subheading { font-size: clamp(38px, 9vw, 54px); transform: translate(calc(-50% + var(--focus-subheading-offset-x)), calc(-90% + var(--focus-subheading-offset-y))) rotate(var(--focus-subheading-rotation)); }
  .focus-heading { font-size: clamp(52px, 10vw, 90px); }
}

@media (max-width: 540px) {
  .focus-text-section { padding: 70px 12px; }
  .focus-text-section .text-container { padding-top: 60px; }
  .focus-subheading { font-size: clamp(34px, 12vw, 46px); }
  .focus-heading { font-size: clamp(38px, 12vw, 64px); }
}

/* ------------------------------
   Animations
--------------------------------*/
.fade-in { animation: fadeIn 1.2s ease forwards; opacity: 0; }
.slide-up { animation: slideUp 1s ease forwards; opacity: 0; }
.zoom-in { animation: zoomIn 1s ease forwards; opacity: 0; }
.rotate-in { animation: rotateIn 1s ease forwards; opacity: 0; }
.flip-in { animation: flipIn 1s ease forwards; opacity: 0; }

@keyframes fadeIn {
  to { opacity: 1; }
}
@keyframes slideUp {
  from { transform: translateY(40px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
@keyframes zoomIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}
@keyframes rotateIn {
  from { transform: rotateX(-90deg); opacity: 0; }
  to { transform: rotateX(0); opacity: 1; }
}
@keyframes flipIn {
  from { transform: rotateY(90deg); opacity: 0; }
  to { transform: rotateY(0); opacity: 1; }
}
</style>
