<section id="m-section-{{ section.id }}" class="{{ section_classes }}">
  <div class="{{ container }} m-section-my m-section-py">
    {% capture section_header %}
      {% render 'index-section-header', section_settings: section.settings %}
    {% endcapture %}
    {% if section_header != blank %}
      {% if container == 'container-full' %}
        <div class="container">
          {{ section_header }}
        </div>
      {% else %}
        {{ section_header }}
      {% endif %}
    {% endif %}

    <div class="m-image-with-text__inner m:flex m:flex-wrap{% if section.settings.layout == 'right' %} m:flex-row-reverse{% endif %}">
      <div
        class="m-image-with-text__image m:column m:w-full md:m:w-1/2 lg:m:w-{{ section.settings.image_column_size }}/12{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}"
        {% if animated %} data-cascade style="--animation-order: 1;" {% endif %}
      >
        <m-image-layer
          class="{{ image_wrapper_class }}"
          {% if image_animation == 'parallax' and section.settings.image_overlap %} data-enable-parallax="true" {% endif %}
          {% if section.settings.image_2 != 'blank' %} style="--offset-top: {{ section.settings.second_image_offset_top }}%" {% endif %}
        >
          <div class="m-image-with-text__image-first{% if section.settings.hover_effect %} m-hover-box m-hover-box--scale-up{% endif %} m:blocks-radius">
            {% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif %}
            {% if section.settings.image != blank %}
              {% render 'responsive-image', image: section.settings.image, image_class: 'm:w-full m:h-full' %}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'm-placeholder-svg m:w-full m:h-full m:object-cover' }}
            {% endif %}
            {% if section.settings.link != blank %}</a>{% endif %}
          </div>
          {% if section.settings.image_2 != blank %}
            <div class="m-image-with-text__image-second{% if section.settings.hover_effect %} m-hover-box m-hover-box--scale-up{% endif %} m:blocks-radius">
              {% if section.settings.link_2 != blank %}<a href="{{ section.settings.link_2 }}">{% endif %}
              {% render 'responsive-image', image: section.settings.image_2, image_class: 'm:w-full m:h-full' %}
              {% if section.settings.link_2 != blank %}</a>{% endif %}
            </div>
          {% endif %}
        </m-image-layer>
      </div>

      <div
        class="m-image-with-text__content m:column m:w-full md:m:w-1/2 lg:m:w-{{ 12 | minus: section.settings.image_column_size }}/12 {% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}"
        {% if animated %} data-cascade style="--animation-order: 2;" {% endif %}
      >
        <div class="m-content-box m-richtext m-richtext--{{ section.settings.text_size }} m:w-full m:text-{{ section.settings.content_alignment }}">
          {% if section.settings.sub_title != blank %}
            <p class="m-richtext__subtitle m-content-box__subheading {{ subtext_size }}">
              {{ section.settings.sub_title }}
            </p>
          {% endif %}

          {% comment %}
            Heading: wrap in a container that JS/CSS will target.
            We apply an inline CSS variable for animation duration (seconds).
          {% endcomment %}

          {% assign heading_anim = section.settings.heading_animation | default: 'none' %}
          {% assign heading_duration = section.settings.heading_animation_duration | default: 0.9 %}

          {% if section.settings.title != blank %}
            <h3
              class="m-richtext__title m-content-box__heading {{ heading_size }}"
              data-heading-anim="{{ heading_anim }}"
              style="--heading-duration: {{ heading_duration }}s;"
              aria-hidden="false"
            >
              {%- comment -%}
                The actual text will be processed by JS to add classes/spans as needed.
              {%- endcomment -%}
              <span class="m-heading-inner">{{ section.settings.title }}</span>
            </h3>
          {% endif %}

          {% if section.settings.text != blank %}
            <div class="m-richtext__description rte m-content-box__description {{ subtext_size }}">
              {{ section.settings.text }}
            </div>
          {% endif %}
          {% if section.settings.button_label != blank %}
            <div class="m-richtext__button">
              <a
                href="{{ section.settings.button_link | default: "#" }}"
                class="m-button {{ section.settings.button_style | replace: 'sf__btn-primary', 'm-button--primary' | replace: 'sf__btn-secondary', 'm-button--secondary' | replace: 'sf__btn-link', 'm-button--link' | replace: 'sf__btn-white', 'm-button--white' }} {{ section.settings.button_size }}"
              >
                {{- section.settings.button_label -}}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{%- comment -%}
  Inline script: safe, small. This handles set up for heading animations.
  It reads data-heading-anim and applies classes and inline animation styles.
{%- endcomment -%}

<script>
(function(){
  function initHeadingAnimation(sectionId) {
    var section = document.getElementById('m-section-{{ section.id }}');
    if (!section) return;
    var h = section.querySelector('.m-richtext__title .m-heading-inner');
    if (!h) return;

    var wrapper = h.parentNode; // h3
    var anim = wrapper.getAttribute('data-heading-anim') || 'none';
    var duration = getComputedStyle(wrapper).getPropertyValue('--heading-duration') || '0.9s';

    // reset any previous modification (useful for editor re-render)
    // move plain text back if needed
    if (h.dataset.originalText) {
      h.innerHTML = h.dataset.originalText;
    } else {
      h.dataset.originalText = h.innerHTML;
    }

    var text = h.textContent.trim();

    // remove any animation classes first
    wrapper.classList.remove('heading--typewriter','heading--slide-up','heading--letter-fade','heading--underline','heading--zoom-in');

    if (anim === 'none') {
      return;
    }

    if (anim === 'typewriter') {
      // wrap text in a span that we animate width on
      h.innerHTML = '<span class="heading--typewriter" style="display:inline-block; width:0; max-width:100%; animation: typewriter-width-{{ section.id }} ' + duration + ' steps(30,end) forwards; -webkit-animation: typewriter-width-{{ section.id }} ' + duration + ' steps(30,end) forwards;">' +
                    '<span class="typewriter-inner">' + escapeHtml(text) + '</span></span>';
      // caret blink via border-right already present in CSS
      // ensure border color matches current color
    } else if (anim === 'slide-up') {
      wrapper.classList.add('heading--slide-up');
      // apply animation
      wrapper.style.animation = 'slide-up-{{ section.id }} ' + duration + ' ease forwards';
    } else if (anim === 'letter-fade') {
      wrapper.classList.add('heading--letter-fade');
      // split letters into spans
      var out = '';
      for (var i = 0; i < text.length; i++) {
        var ch = text[i];
        // preserve spaces
        if (ch === ' ') {
          out += '<span class="char" style="display:inline-block;width:0.4em">&nbsp;</span>';
        } else {
          var delay = (i * 0.04);
          out += '<span class="char" style="animation: letter-fade-up-{{ section.id }} ' + duration + ' forwards; animation-delay: ' + delay + 's;">' + escapeHtml(ch) + '</span>';
        }
      }
      h.innerHTML = out;
    } else if (anim === 'underline-grow') {
      wrapper.classList.add('heading--underline');
      wrapper.style.setProperty('--heading-duration', duration);
      // set the pseudo-element animation via inline style
      var after = wrapper.querySelector('style[data-underline]'); // noop: ensure no duplicates
      wrapper.style.animation = '';
      // add an animation to the pseudo element by injecting a small style block
      var styleId = 'underline-style-{{ section.id }}';
      if (!document.getElementById(styleId)) {
        var s = document.createElement('style');
        s.id = styleId;
        s.innerHTML = '#m-section-{{ section.id }} .m-richtext__title.heading--underline:after { animation: underline-grow-{{ section.id }} ' + duration + ' ease forwards; }';
        document.head.appendChild(s);
      }
      // leave text as-is
    } else if (anim === 'zoom-in') {
      wrapper.classList.add('heading--zoom-in');
      wrapper.style.animation = 'zoom-in-{{ section.id }} ' + duration + ' ease forwards';
    }
  }

  function escapeHtml(unsafe) {
    return unsafe.replace(/[&<>"']/g, function(m) {
      return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#039;'})[m];
    });
  }

  // Run on DOMContentLoaded and also after window load (editor may re-render)
  document.addEventListener('DOMContentLoaded', function(){
    initHeadingAnimation('{{ section.id }}');
  });
  // Re-init when Shopify sections re-initialize (preview/editor)
  if (window.Shopify && window.Shopify.designMode) {
    // attempt to re-init when editor updates - safe fallback
    document.addEventListener('shopify:section:load', function(e){ initHeadingAnimation('{{ section.id }}'); });
    document.addEventListener('shopify:block:select', function(e){ initHeadingAnimation('{{ section.id }}'); });
  }
})();
</script>

