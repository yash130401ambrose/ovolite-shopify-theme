{%- style -%}
  .m-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --column-gap: {{ section.settings.item_gap }}px;
    --row-gap: {{ section.settings.item_gap | divided_by: 2 }}px;
    --column-gap-mobile: {{ section.settings.item_gap_mobile }}px;
    --row-gap-mobile: {{ section.settings.item_gap_mobile }}px;

    background-color: {{ section.settings.background_color }};
  }

/* -------------------------------
   HEADING ANIMATIONS (local)
   ------------------------------- */

.m-section-{{ section.id }} .m-richtext__title {
  display: inline-block;
  white-space: nowrap;
  overflow: visible;
}

/* --- Typewriter --- */
.m-section-{{ section.id }} .heading--typewriter {
  overflow: hidden;
  border-right: 2px solid rgba(0,0,0,0.8);
  white-space: nowrap;
  box-sizing: border-box;
  display:inline-block;
  vertical-align: middle;
}
@keyframes typewriter-width-{{ section.id }} {
  from { width: 0; }
  to { width: 100%; }
}

/* --- Slide Up --- */
.m-section-{{ section.id }} .heading--slide-up {
  display:inline-block;
  transform: translateY(12px);
  opacity: 0;
  will-change: transform, opacity;
}
@keyframes slide-up-{{ section.id }} {
  to { transform: translateY(0); opacity: 1; }
}

/* --- Letter Fade (staggered) --- */
.m-section-{{ section.id }} .heading--letter-fade { display:inline-block; white-space:nowrap; }
.m-section-{{ section.id }} .heading--letter-fade .char {
  display:inline-block;
  opacity:0;
  transform: translateY(6px);
  will-change: transform, opacity;
}
@keyframes letter-fade-up-{{ section.id }} {
  to { opacity: 1; transform: translateY(0); }
}

/* --- Underline grow --- */
.m-section-{{ section.id }} .heading--underline {
  display:inline-block;
  position:relative;
  padding-bottom:6px;
}
.m-section-{{ section.id }} .heading--underline:after{
  content: "";
  position:absolute;
  left:0;
  bottom:0;
  height:3px;
  width:0%;
  background: currentColor;
}
@keyframes underline-grow-{{ section.id }} {
  to { width: 100%; }
}

/* --- Zoom in --- */
.m-section-{{ section.id }} .heading--zoom-in {
  display:inline-block;
  transform: scale(0.85);
  opacity:0;
  will-change: transform, opacity;
}
@keyframes zoom-in-{{ section.id }} {
  to { transform: scale(1); opacity:1; }
}

