{% liquid
  assign bg_color = section.settings.bg_color | default: '#eef5ea'
  assign heading_text = section.settings.heading_text | default: 'WHAT MAKES US SPECIAL'
  assign heading_color = section.settings.heading_color | default: '#ffffff'
  assign card_title_color = section.settings.card_title_color | default: '#1a1a1a'
  assign card_bg = section.settings.card_bg | default: '#ffffff'
  assign desc_color = section.settings.desc_color | default: '#1a1a1a'
  assign card_radius = section.settings.card_radius | default: 16
  assign card_width = section.settings.card_width | default: 720
  assign card_gap = section.settings.card_gap | default: 32
  assign card_height = section.settings.card_height | default: 320
  assign section_padding_y = section.settings.section_padding_y | default: 80
  assign icon_size = section.settings.icon_size | default: 96
  assign enable_animation = section.settings.enable_animation | default: true
  assign shared_icon = section.settings.shared_icon
  assign card_icon_size = section.settings.card_icon_size | default: 64
  assign card_icon_gap = section.settings.card_icon_gap | default: 24
  assign heading_card_gap = section.settings.heading_card_gap | default: 56
  assign scroll_distance = section.settings.scroll_distance | default: 2200
  assign scroll_smoothness = section.settings.scroll_smoothness | default: 6
  assign animation_direction = section.settings.animation_direction | default: 'rtl'
  assign animation_ease = section.settings.animation_ease | default: 'power2.out'
%}

<section
  id="scroll-cards-{{ section.id }}"
  class="scroll-cards-section"
  data-enable-animation="{{ enable_animation }}"
  data-animation-direction="{{ animation_direction }}"
  data-animation-ease="{{ animation_ease }}"
  data-scroll-distance="{{ scroll_distance }}"
  data-scroll-smoothness="{{ scroll_smoothness }}"
  style="--bg: {{ bg_color }};
         --heading-color: {{ heading_color }};
         --desc-color: {{ desc_color }};
         --card-title-color: {{ card_title_color }};
         --card-bg: {{ card_bg }};
         --card-radius: {{ card_radius }}px;
         --card-width: {{ card_width }}px;
         --card-gap: {{ card_gap }}px;
         --card-height: {{ card_height }}px;
         --section-padding-y: {{ section_padding_y }}px;
         --icon-size: {{ icon_size }}px;
         --heading-card-gap: {{ heading_card_gap }}px;"
>
  <div class="scroll-cards__container">

    <h2 class="scroll-cards__heading">{{ heading_text }}</h2>

    {% if shared_icon != blank %}
      <div class="scroll-cards__shared-icon">
        {{ shared_icon | image_url: width: 120 | image_tag: class: 'shared-icon-img', alt: 'Section icon' }}
      </div>
    {% endif %}

    <div class="scroll-cards__viewport">
      <div class="scroll-cards__track">
        {% for block in section.blocks %}
          {% if block.type == 'card' %}
            {% assign block_icon = block.settings.card_icon | default: shared_icon %}
            <article class="scroll-card" {{ block.shopify_attributes }}>
              {% if block_icon != blank %}
                <div class="scroll-card__icon">
                  {{ block_icon | image_url: width: 160 | image_tag: class: 'scroll-card__icon-image', alt: block.settings.icon_alt | default: block.settings.title }}
                </div>
              {% endif %}
              {% if block.settings.title != blank %}
                <h3 class="scroll-card__title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="scroll-card__text rte">{{ block.settings.text }}</div>
              {% endif %}
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #scroll-cards-{{ section.id }} {
    position: relative;
    background: var(--bg);
    padding: calc(var(--section-padding-y) * 0.35) 0 calc(var(--section-padding-y) * 1.1);
    overflow: hidden;
  }

  .scroll-cards__container {
    position: relative;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding-top: clamp(0px, 0.8vw, 18px);
  }

  .scroll-cards__heading {
    position: relative;
    display: block;
    margin: 0 auto clamp(16px, 4vw, var(--heading-card-gap));
    padding: 0 clamp(10px, 2.6vw, 26px);
    max-width: min(960px, 92%);
    text-align: center;
    transform: none;
    font-size: clamp(34px, 6.5vw, 92px);
    font-weight: 700;
    line-height: 1.05;
    color: var(--heading-color, #ffffff);
    opacity: 1;
    white-space: pre-wrap;
    pointer-events: none;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  /* shared center icon */
  .scroll-cards__shared-icon {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 6;
  }

  .scroll-cards__shared-icon .shared-icon-img {
    width: var(--icon-size);
    height: auto;
    display: block;
  }

  .scroll-cards__viewport {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .scroll-cards__viewport::before,
  .scroll-cards__viewport::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: min(14vw, 220px);
    pointer-events: none;
    z-index: 7;
    opacity: 0.75;
    transition: opacity 0.3s ease;
  }

  .scroll-cards__viewport::before {
    left: 0;
    background: linear-gradient(90deg, var(--bg) 0%, rgba(255, 255, 255, 0) 100%);
  }

  .scroll-cards__viewport::after {
    right: 0;
    background: linear-gradient(270deg, var(--bg) 0%, rgba(255, 255, 255, 0) 100%);
  }

  .scroll-cards__track {
    display: inline-flex;
    gap: var(--card-gap);
    align-items: stretch;
    padding: clamp(18px, calc(var(--icon-size) * 0.35), 58px) 6vw clamp(20px, 4.2vw, 42px);
    will-change: transform;
    z-index: 3;
  }

  .scroll-card {
    flex: 0 0 var(--card-width);
    background: var(--card-bg);
    border-radius: var(--card-radius);
    padding: clamp(20px, 3.6vw, 34px) clamp(18px, 2.8vw, 26px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.1);
    min-height: clamp(160px, calc(var(--card-height) * 0.7), 320px);
    position: relative;
    text-align: center;
    transform-origin: center;
    transform: none;
    opacity: 1;
    will-change: transform, opacity;
    transition: transform 0.45s ease, opacity 0.35s ease, box-shadow 0.45s ease;
  }

  .scroll-card.is-active {
    box-shadow: 0 26px 64px rgba(0, 0, 0, 0.16);
    opacity: 1;
    transform: none;
  }

  .scroll-cards-section[data-animation-direction="ltr"] .scroll-cards__viewport::before {
    left: auto;
    right: 0;
    background: linear-gradient(270deg, var(--bg) 0%, rgba(255, 255, 255, 0) 100%);
  }

  .scroll-cards-section[data-animation-direction="ltr"] .scroll-cards__viewport::after {
    right: auto;
    left: 0;
    background: linear-gradient(90deg, var(--bg) 0%, rgba(255, 255, 255, 0) 100%);
  }

  .scroll-card__title {
    font-weight: 700;
    font-size: clamp(20px, 2.6vw, 34px);
    color: var(--card-title-color);
    line-height: 1.3;
    margin: 0;
  }

  .scroll-card__text {
    color: var(--desc-color);
    font-size: clamp(15px, 1.4vw, 18px);
    line-height: 1.6;
    max-width: min(520px, 90%);
    opacity: 1;
  }

  .scroll-card__icon {
    width: clamp(48px, var(--card-icon-size), 96px);
    height: clamp(48px, var(--card-icon-size), 96px);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: clamp(16px, var(--card-icon-gap), 28px);
  }

  .scroll-card__icon-image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .scroll-card:focus-within {
    outline: 2px solid currentColor;
    outline-offset: 4px;
  }

  .scroll-cards-section[data-enable-animation="false"] .scroll-cards__viewport,
  .scroll-cards-section[data-scrollcards-mobile="true"] .scroll-cards__viewport {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 12px;
  }

  .scroll-cards-section[data-enable-animation="false"] .scroll-cards__track,
  .scroll-cards-section[data-scrollcards-mobile="true"] .scroll-cards__track {
    padding: clamp(48px, calc(var(--icon-size) + 32px), 80px) clamp(8vw, 12vw, 16vw) 40px;
  }

  .scroll-cards-section[data-enable-animation="false"] .scroll-card,
  .scroll-cards-section[data-scrollcards-mobile="true"] .scroll-card {
    scroll-snap-align: center;
    transform: none;
    opacity: 1;
  }

  @media (max-width: 1024px) {
    .scroll-cards__heading {
      font-size: clamp(28px, 7vw, 84px);
      margin: 0 auto clamp(14px, 6vw, calc(var(--heading-card-gap) * 0.9));
      padding: 0 clamp(14px, 4.6vw, 30px);
      opacity: 0.28;
    }
    .scroll-cards__viewport::before,
    .scroll-cards__viewport::after {
      width: 22vw;
    }
  }

  @media (max-width: 900px) {
    .scroll-cards-section[data-enable-animation="true"] .scroll-cards__viewport {
      overflow: hidden;
    }
    .scroll-cards__container {
      max-width: 90vw;
      padding-top: clamp(4px, 3vw, 24px);
    }
    .scroll-cards__track {
      padding: clamp(16px, calc(var(--icon-size) * 0.3), 46px) clamp(4.5vw, 8vw, 11vw) clamp(18px, 4.5vw, 36px);
    }
    .scroll-card {
      flex: 0 0 clamp(340px, 80vw, 420px);
      min-height: clamp(160px, calc(var(--card-height) * 0.6), 260px);
    }
  }

  @media (max-width: 768px) {
    #scroll-cards-{{ section.id }} {
      --card-width: clamp(280px, 78vw, 360px);
      --card-gap: clamp(16px, 8vw, 24px);
      --card-icon-size: clamp(40px, 10vw, 68px);
      --card-icon-gap: clamp(12px, 5vw, 20px);
      padding-top: clamp(20px, calc(var(--section-padding-y) * 0.4), 48px);
      padding-bottom: clamp(64px, calc(var(--section-padding-y) * 1.05), 120px);
    }

    .scroll-cards__container {
      max-width: 100%;
      padding-top: clamp(4px, 3vw, 24px);
    }

    .scroll-cards__heading {
      font-size: clamp(24px, 14vw, 60px);
      letter-spacing: 0.04em;
      margin: 0 auto clamp(12px, 7vw, calc(var(--heading-card-gap) * 0.85));
      padding: 0 clamp(14px, 5.5vw, 36px);
      opacity: 0.24;
    }

    .scroll-cards-section[data-scrollcards-mobile="true"] .scroll-cards__track {
      padding-left: clamp(6vw, 12vw, 18vw);
      padding-right: clamp(6vw, 12vw, 18vw);
    }

    .scroll-cards__viewport::before,
    .scroll-cards__viewport::after {
      width: 28vw;
      opacity: 0.55;
    }

    .scroll-card {
      padding: clamp(20px, 7vw, 28px) clamp(16px, 6vw, 22px);
      min-height: clamp(150px, calc(var(--card-height) * 0.55), 240px);
    }

    .scroll-card__title {
      font-size: clamp(18px, 5vw, 26px);
    }

    .scroll-card__text {
      font-size: clamp(15px, 4.5vw, 18px);
    }
  }

  @media (max-width: 480px) {
    .scroll-cards-section {
      padding-top: clamp(32px, 12vw, 56px);
      padding-bottom: clamp(72px, 20vw, 108px);
    }

    .scroll-cards__heading {
      font-size: clamp(22px, 15vw, 52px);
      margin: 0 auto clamp(10px, 8.5vw, calc(var(--heading-card-gap) * 0.8));
      padding: 0 clamp(12px, 6.5vw, 32px);
      opacity: 0.28;
    }

    .scroll-cards__viewport::before,
    .scroll-cards__viewport::after {
      width: 32vw;
      opacity: 0.5;
    }

    .scroll-card {
      flex: 0 0 clamp(250px, 82vw, 320px);
      padding: clamp(18px, 7vw, 26px) clamp(14px, 5.5vw, 20px);
      border-radius: clamp(16px, 6vw, 24px);
      min-height: clamp(150px, calc(var(--card-height) * 0.6), 220px);
    }

    .scroll-card__icon {
      margin-bottom: clamp(10px, 4vw, 18px);
    }
  }
</style>

{% if enable_animation %}
<script>
(function() {
  'use strict';
  var sectionId = 'scroll-cards-{{ section.id }}';
  var GSAP_SRC = 'https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js';
  var SCROLL_TRIGGER_SRC = 'https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js';
  var rootCache = null;

  function loadScript(src) {
    return new Promise(function(resolve, reject) {
      var existing = document.querySelector('script[data-src="' + src + '"]');
      if (existing) {
        if (existing.hasAttribute('data-loaded')) {
          resolve();
          return;
        }
        existing.addEventListener('load', resolve, { once: true });
        existing.addEventListener('error', reject, { once: true });
        return;
      }
      var s = document.createElement('script');
      s.src = src;
      s.async = true;
      s.setAttribute('data-src', src);
      s.onload = function() {
        s.setAttribute('data-loaded', 'true');
        resolve();
      };
      s.onerror = reject;
      document.head.appendChild(s);
    });
  }

  function destroyExisting() {
    if (rootCache && typeof rootCache.__scrollCardsDestroy === 'function') {
      rootCache.__scrollCardsDestroy();
    }
  }

  function init() {
    destroyExisting();
    var root = document.getElementById(sectionId);
    if (!root) return;
    rootCache = root;

    var track = root.querySelector('.scroll-cards__track');
    var viewport = root.querySelector('.scroll-cards__viewport');
    var heading = root.querySelector('.scroll-cards__heading');
    if (!track || !viewport) return;

    var cards = Array.from(track.querySelectorAll('.scroll-card'));
    if (!cards.length) return;

    var config = {
      direction: (root.getAttribute('data-animation-direction') || 'rtl').toLowerCase() === 'ltr' ? 'ltr' : 'rtl',
      ease: root.getAttribute('data-animation-ease') || 'power2.out',
      scrollDistance: parseInt(root.getAttribute('data-scroll-distance'), 10),
      smoothnessSteps: parseInt(root.getAttribute('data-scroll-smoothness'), 10)
    };

    if (isNaN(config.scrollDistance)) {
      config.scrollDistance = 2200;
    }
    config.scrollDistance = Math.max(config.scrollDistance, 400);

    var smoothnessSeconds = isNaN(config.smoothnessSteps) ? 0.6 : config.smoothnessSteps / 10;
    var scrubValue = smoothnessSeconds > 0 ? { smooth: smoothnessSeconds, ease: config.ease } : true;

    function setupAnimation() {
      if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') return;
      gsap.registerPlugin(ScrollTrigger);

      var mm = gsap.matchMedia();

      function cleanupCardState() {
        cards.forEach(function(card) {
          gsap.killTweensOf(card);
          card.classList.remove('is-active');
          gsap.set(card, { clearProps: 'transform,opacity,scale' });
        });
        gsap.killTweensOf(track);
        gsap.set(track, { clearProps: 'transform' });
        if (heading) {
          gsap.killTweensOf(heading);
          gsap.set(heading, { clearProps: 'opacity,transform' });
        }
      }

      root.__scrollCardsDestroy = function() {
        if (mm) {
          mm.kill();
        }
        cleanupCardState();
      };

      mm.add('(min-width: 768px)', function() {
        root.removeAttribute('data-scrollcards-mobile');

        var timeline = null;
        var scrollTriggerInstance = null;
        var resizeRaf = null;
        var directionMultiplier = config.direction === 'rtl' ? 1 : -1;

        function setActive(index) {
          cards.forEach(function(card, cardIndex) {
            if (cardIndex === index) {
              card.classList.add('is-active');
            } else {
              card.classList.remove('is-active');
            }
          });
        }

        function killTimeline() {
          if (timeline) {
            timeline.kill();
            timeline = null;
          }
          if (scrollTriggerInstance) {
            scrollTriggerInstance.kill();
            scrollTriggerInstance = null;
          }
        }

        function buildTimeline() {
          var previousProgress = scrollTriggerInstance ? scrollTriggerInstance.progress : 0;
          killTimeline();

          var viewportWidth = viewport.clientWidth || window.innerWidth;
          var trackWidth = track.scrollWidth;
          var viewportCenter = viewportWidth / 2;

          var positions = cards.map(function(card) {
            var cardCenter = card.offsetLeft + card.offsetWidth / 2;
            if (directionMultiplier === 1) {
              return viewportCenter - cardCenter;
            }
            var mirroredCenter = trackWidth - cardCenter;
            return viewportCenter - mirroredCenter;
          });

          if (!positions.length) return;

          var firstCard = cards[0];
          var lastCard = cards[cards.length - 1];

          var entryOvershoot = viewportWidth * 0.18 + firstCard.offsetWidth * 0.25;
          var exitOvershoot = viewportWidth * 0.4 + lastCard.offsetWidth * 0.35;

          var startOffset = positions[0] + directionMultiplier * entryOvershoot;
          var endOffset = positions[positions.length - 1] - directionMultiplier * exitOvershoot;

          timeline = gsap.timeline({ defaults: { ease: config.ease } });

        gsap.set(track, { x: startOffset });
        if (heading) {
          gsap.set(heading, { opacity: 1 });
        }
          cards.forEach(function(card) {
            gsap.set(card, {
              opacity: 0.55,
              xPercent: 24 * directionMultiplier
            });
          });
          setActive(-1);

          var stepDuration = 1;
          var holdDuration = 0.28;
          var releaseDuration = 0.55;
          var totalDuration = cards.length * (stepDuration + holdDuration) + releaseDuration;

          cards.forEach(function(card, index) {
            timeline.to(track, { x: positions[index], duration: stepDuration });

            timeline.to(card, {
              opacity: 1,
              xPercent: 0,
              duration: stepDuration * 0.85
            }, '<');

            timeline.call(setActive, [index]);

            if (index > 0) {
              var previous = cards[index - 1];
              timeline.to(previous, {
                opacity: 0.5,
                duration: stepDuration * 0.55
              }, '<');
            }

            timeline.to({}, { duration: holdDuration });
          });

          timeline.to(track, { x: endOffset, duration: releaseDuration, ease: config.ease });
          timeline.call(setActive, [-1]);

          if (heading) {
            timeline.to(heading, { opacity: 0.35, duration: totalDuration, ease: 'none' }, 0);
        }

        scrollTriggerInstance = ScrollTrigger.create({
          trigger: root,
          start: 'top top',
            end: '+=' + config.scrollDistance,
          pin: true,
            scrub: scrubValue,
            anticipatePin: 1,
            animation: timeline,
            invalidateOnRefresh: true
          });

          if (previousProgress > 0) {
            scrollTriggerInstance.progress(previousProgress);
            scrollTriggerInstance.update();
          }
        }

        buildTimeline();

        var resizeHandler = function() {
          if (resizeRaf) {
            cancelAnimationFrame(resizeRaf);
          }
          resizeRaf = requestAnimationFrame(function() {
            buildTimeline();
          });
        };

        window.addEventListener('resize', resizeHandler);

        return function() {
          window.removeEventListener('resize', resizeHandler);
          killTimeline();
          setActive(-1);
          cleanupCardState();
        };
      });

      mm.add('(max-width: 767px)', function() {
        root.setAttribute('data-scrollcards-mobile', 'true');
        cleanupCardState();
        return function() {
          root.removeAttribute('data-scrollcards-mobile');
        };
      });
    }

    if (typeof gsap === 'undefined') {
      loadScript(GSAP_SRC)
        .then(function() { return loadScript(SCROLL_TRIGGER_SRC); })
        .then(function() { setupAnimation(); })
        .catch(function() { /* noop */ });
    } else if (typeof ScrollTrigger === 'undefined') {
      loadScript(SCROLL_TRIGGER_SRC)
        .then(function() { setupAnimation(); })
        .catch(function() { /* noop */ });
    } else {
      setupAnimation();
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

  if (window.Shopify && window.Shopify.designMode) {
    document.addEventListener('shopify:section:load', function(evt) {
      if (evt.detail && evt.detail.sectionId === '{{ section.id }}') {
        init();
      }
    });
    document.addEventListener('shopify:section:unload', function(evt) {
      if (evt.detail && evt.detail.sectionId === '{{ section.id }}') {
        destroyExisting();
      }
    });
    document.addEventListener('shopify:section:select', function(evt) {
      if (evt.detail && evt.detail.sectionId === '{{ section.id }}' && typeof ScrollTrigger !== 'undefined') {
        ScrollTrigger.refresh();
      }
    });
  }
})();
</script>
{% endif %}

{% schema %}
{
  "name": "Scroll Cards",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#EEF5EA" },
    { "type": "text", "id": "heading_text", "label": "Heading text", "default": "WHAT MAKES US\\nSPECIAL" },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#FFFFFF" },
    { "type": "color", "id": "card_title_color", "label": "Card title color", "default": "#1A1A1A" },
    { "type": "color", "id": "desc_color", "label": "Description text color", "default": "#1A1A1A" },
    { "type": "color", "id": "card_bg", "label": "Card background color", "default": "#FFFFFF" },
    { "type": "image_picker", "id": "shared_icon", "label": "Shared center icon (same for all cards)" },
    { "type": "range", "id": "card_icon_size", "label": "Card icon size", "min": 32, "max": 120, "step": 4, "default": 72, "unit": "px" },
    { "type": "range", "id": "card_icon_gap", "label": "Space below icon", "min": 8, "max": 40, "step": 2, "default": 20, "unit": "px" },
    { "type": "range", "id": "card_height", "label": "Card height (px)", "min": 200, "max": 680, "step": 10, "default": 320, "unit": "px" },
    { "type": "range", "id": "icon_size", "label": "Shared icon size (px)", "min": 40, "max": 200, "step": 2, "default": 96, "unit": "px" },
    { "type": "range", "id": "card_radius", "label": "Card corner radius", "min": 0, "max": 40, "step": 1, "default": 16, "unit": "px" },
    { "type": "range", "id": "card_width", "label": "Card width", "min": 240, "max": 920, "step": 10, "default": 720, "unit": "px" },
    { "type": "range", "id": "card_gap", "label": "Gap between cards", "min": 8, "max": 80, "step": 2, "default": 32, "unit": "px" },
    { "type": "range", "id": "section_padding_y", "label": "Section vertical padding", "min": 20, "max": 300, "step": 4, "default": 80, "unit": "px" },
    { "type": "range", "id": "heading_card_gap", "label": "Spacing between heading and cards", "min": 8, "max": 160, "step": 4, "default": 56, "unit": "px" },
    { "type": "range", "id": "scroll_distance", "label": "Scroll travel distance", "min": 600, "max": 6000, "step": 100, "default": 2200, "unit": "px" },
    { "type": "range", "id": "scroll_smoothness", "label": "Scroll smoothing (x0.1s)", "min": 0, "max": 20, "step": 1, "default": 6 },
    {
      "type": "select",
      "id": "animation_direction",
      "label": "Animation direction",
      "default": "rtl",
