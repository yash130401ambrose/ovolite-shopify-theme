{% liquid
  assign bg_color = section.settings.bg_color | default: '#eef5ea'
  assign heading_text = section.settings.heading_text | default: 'WHAT MAKES US SPECIAL'
  assign heading_color = section.settings.heading_color | default: '#ffffff'
  assign card_title_color = section.settings.card_title_color | default: '#1a1a1a'
  assign card_bg = section.settings.card_bg | default: '#ffffff'
  assign desc_color = section.settings.desc_color | default: '#1a1a1a'
  assign card_radius = section.settings.card_radius | default: 16
  assign card_width = section.settings.card_width | default: 720
  assign card_gap = section.settings.card_gap | default: 32
  assign card_height = section.settings.card_height | default: 520
  assign section_padding_y = section.settings.section_padding_y | default: 80
  assign icon_size = section.settings.icon_size | default: 96
  assign enable_animation = section.settings.enable_animation | default: true
  assign shared_icon = section.settings.shared_icon
%}

<section
  id="scroll-cards-{{ section.id }}"
  class="scroll-cards-section"
  data-enable-animation="{{ enable_animation }}"
  style="--bg: {{ bg_color }};
         --heading-color: {{ heading_color }};
         --desc-color: {{ desc_color }};
         --card-title-color: {{ card_title_color }};
         --card-bg: {{ card_bg }};
         --card-radius: {{ card_radius }}px;
         --card-width: {{ card_width }}px;
         --card-gap: {{ card_gap }}px;
         --card-height: {{ card_height }}px;
         --section-padding-y: {{ section_padding_y }}px;
         --icon-size: {{ icon_size }}px;"
>
  <div class="scroll-cards__container">

    <h2 class="scroll-cards__heading">{{ heading_text }}</h2>

    {% if shared_icon != blank %}
      <div class="scroll-cards__shared-icon">
        {{ shared_icon | image_url: width: 120 | image_tag: class: 'shared-icon-img', alt: 'Section icon' }}
      </div>
    {% endif %}

    <div class="scroll-cards__viewport">
      <div class="scroll-cards__track">
        {% for block in section.blocks %}
          {% if block.type == 'card' %}
            <article class="scroll-card" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h3 class="scroll-card__title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="scroll-card__text rte">{{ block.settings.text }}</div>
              {% endif %}
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #scroll-cards-{{ section.id }} {
    position: relative;
    background: var(--bg);
    padding: var(--section-padding-y) 0;
    overflow: hidden;
  }

  .scroll-cards__container {
    position: relative;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .scroll-cards__heading {
    position: absolute;
    top: 50%;
    left: 5vw;
    transform: translateY(-50%);
    font-size: clamp(36px, 8vw, 120px);
    font-weight: 700;
    line-height: 1.05;
    color: var(--heading-color);
    opacity: 1;
    white-space: pre-wrap;
    pointer-events: none;
    z-index: 5;
    margin: 0;
  }

  /* shared center icon */
  .scroll-cards__shared-icon {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 6;
  }

  .scroll-cards__shared-icon .shared-icon-img {
    width: var(--icon-size);
    height: auto;
    display: block;
  }

  .scroll-cards__viewport {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .scroll-cards__track {
    display: inline-flex;
    gap: var(--card-gap);
    align-items: stretch;
    padding: calc(var(--icon-size) + 64px) 5vw 40px;
    will-change: transform;
    z-index: 3;
  }

  .scroll-card {
    flex: 0 0 var(--card-width);
    background: var(--card-bg);
    border-radius: var(--card-radius);
    padding: 48px 36px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.08);
    min-height: var(--card-height);
    position: relative;
    text-align: center;
  }

  .scroll-card__title {
    font-weight: 700;
    font-size: clamp(22px, 3vw, 36px);
    color: var(--card-title-color);
    line-height: 1.3;
    margin: 0;
  }

  .scroll-card__text {
    color: var(--desc-color);
    font-size: clamp(15px, 1.4vw, 18px);
    line-height: 1.6;
    max-width: 480px;
  }

  @media (max-width: 768px) {
    #scroll-cards-{{ section.id }} { --card-width: 320px; --card-gap: 16px; }
    .scroll-cards__heading { left: 4vw; font-size: clamp(28px, 14vw, 64px); }
    .scroll-card { padding: 28px 18px; min-height: calc(var(--card-height) * 0.8); }
  }
</style>

{% if enable_animation %}
<script>
(function() {
  'use strict';
  var sectionId = 'scroll-cards-{{ section.id }}';

  function loadScript(src) {
    return new Promise(function(resolve, reject) {
      var s = document.createElement('script');
      s.src = src;
      s.async = true;
      s.onload = resolve;
      s.onerror = reject;
      document.head.appendChild(s);
    });
  }

  function init() {
    var root = document.getElementById(sectionId);
    if (!root) return;
    var track = root.querySelector('.scroll-cards__track');
    var viewport = root.querySelector('.scroll-cards__viewport');
    if (!track || !viewport) return;

    function setup() {
      var cards = track.querySelectorAll('.scroll-card');
      if (!cards.length) return;
      var first = cards[0];
      var last = cards[cards.length - 1];

      var viewportWidth = viewport.clientWidth;
      var firstLeft = first.offsetLeft;
      var lastCenter = last.offsetLeft + last.offsetWidth / 2;
      var viewportCenter = viewportWidth / 2;

      var startX = viewportWidth - firstLeft + 40;
      var endX = viewportCenter - lastCenter;

      var tl = gsap.timeline({
        scrollTrigger: {
          trigger: root,
          start: 'top top',
          end: '+=' + (Math.abs(endX - startX) + 500),
          pin: true,
          scrub: true
        }
      });
      tl.fromTo(track, { x: startX }, { x: endX, ease: 'none' });
    }

    if (typeof gsap === 'undefined') {
      loadScript('https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js')
      .then(function() {
        return loadScript('https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js');
      })
      .then(function() {
        gsap.registerPlugin(ScrollTrigger);
        setup();
      });
    } else {
      if (typeof ScrollTrigger === 'undefined') {
        loadScript('https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js')
        .then(function() {
          gsap.registerPlugin(ScrollTrigger);
          setup();
        });
      } else {
        gsap.registerPlugin(ScrollTrigger);
        setup();
      }
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>
{% endif %}

{% schema %}
{
  "name": "Scroll Cards",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#EEF5EA" },
    { "type": "text", "id": "heading_text", "label": "Heading text", "default": "WHAT MAKES US\\nSPECIAL" },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#FFFFFF" },
    { "type": "color", "id": "card_title_color", "label": "Card title color", "default": "#1A1A1A" },
    { "type": "color", "id": "desc_color", "label": "Description text color", "default": "#1A1A1A" },
    { "type": "color", "id": "card_bg", "label": "Card background color", "default": "#FFFFFF" },
    { "type": "image_picker", "id": "shared_icon", "label": "Shared center icon (same for all cards)" },
    { "type": "range", "id": "card_height", "label": "Card height (px)", "min": 300, "max": 900, "step": 10, "default": 520, "unit": "px" },
    { "type": "range", "id": "icon_size", "label": "Shared icon size (px)", "min": 40, "max": 200, "step": 2, "default": 96, "unit": "px" },
    { "type": "range", "id": "card_radius", "label": "Card corner radius", "min": 0, "max": 40, "step": 1, "default": 16, "unit": "px" },
    { "type": "range", "id": "card_width", "label": "Card width", "min": 240, "max": 920, "step": 10, "default": 720, "unit": "px" },
    { "type": "range", "id": "card_gap", "label": "Gap between cards", "min": 8, "max": 80, "step": 2, "default": 32, "unit": "px" },
    { "type": "range", "id": "section_padding_y", "label": "Section vertical padding", "min": 20, "max": 300, "step": 4, "default": 80, "unit": "px" },
    { "type": "checkbox", "id": "enable_animation", "label": "Enable scroll animation", "default": true }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        { "type": "text", "id": "title", "label": "Card title", "default": "MORE\\nCAFFEINE" },
        { "type": "richtext", "id": "text", "label": "Description text", "default": "<p>85mg of caffeine per serving,<br/>equal to a cappuccino.<br/>Your daily energy boost.</p>" }
      ]
    }
  ],
  "presets": [
    { "name": "Scroll Cards", "blocks": [ { "type": "card" }, { "type": "card" }, { "type": "card" }, { "type": "card" } ] }
  ]
}
{% endschema %}
