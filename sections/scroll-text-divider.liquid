<section class="scroll-divider-section">
  <!-- Top background -->
  <div class="scroll-bg-top"></div>

  <!-- Center ribbon with text -->
  <div class="scroll-ribbon">
    <div class="scroll-ribbon-inner">
      <span class="scroll-ribbon-text">{{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}</span>
    </div>
  </div>

  <!-- Bottom background -->
  <div class="scroll-bg-bottom"></div>
</section>

<style>
.scroll-divider-section {
  width: 100%;
  overflow: hidden;
  position: relative;
  height: 260px;
  display: flex;
  flex-direction: column;
}

/* === Background bands === */
.scroll-bg-top,
.scroll-bg-bottom {
  flex: 1;
  width: 100%;
}

.scroll-bg-top {
  background: {{ section.settings.top_bg_color }};
}

.scroll-bg-bottom {
  background: {{ section.settings.bottom_bg_color }};
}

/* === Ribbon Band === */
.scroll-ribbon {
  background: {{ section.settings.ribbon_color }};
  position: relative;
  height: 120px;
  width: 100%;
  overflow: hidden;
  transform: translateY(-25%) rotate(-2deg);
  z-index: 2;
}

.scroll-ribbon-inner {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  transform: rotate(2deg);
}

.scroll-ribbon-text {
  display: inline-block;
  white-space: nowrap;
  color: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 2px;
  animation: none;
  transform: translateX(0);
}

@media (max-width: 768px) {
  .scroll-ribbon-text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<!-- GSAP scroll-based horizontal motion -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  gsap.registerPlugin(ScrollTrigger);

  gsap.to(".scroll-ribbon-text", {
    xPercent: 50, // move left → right
    ease: "none",
    scrollTrigger: {
      trigger: ".scroll-divider-section",
      start: "top bottom",
      end: "bottom top",
      scrub: true
    }
  });
});
</script>

{% schema %}
{
  "name": " Scroll Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon (Middle Band) Color",
      "default": "#204C2A"
    },
    {
      "type": "color",
      "id": "top_bg_color",
      "label": "Top Background Color",
      "default": "#E5EED8"
    },
    {
      "type": "color",
      "id": "bottom_bg_color",
      "label": "Bottom Background Color",
      "default": "#DCE8C4"
    }
  ],
  "presets": [
    {
      "name": "3-Div Curved Ribbon Scroll Divider"
    }
  ]
}
{% endschema %}
