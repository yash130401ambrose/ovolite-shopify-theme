<section class="stage-container">
  <div data-marquee class="marquee">
    <div class="marquee-inner">
      
      <!-- Background Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 442" width="100%" style="overflow: visible;" class="marquee-bg-svg">
        <path stroke="{{ section.settings.ribbon_color }}" stroke-width="160"
          d="M-71 371.6C126.3 260 593.5 65.8 934.5 80.8C1313 98 1497 136 1572 200" />
      </svg>

      <!-- Text Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 293" width="100%" style="overflow: visible;" data-marquee-svg class="marquee-text-svg">
        <path d="M-68 300C173 173 515.5 193.7 937.2 1254.5 1 1468 183.3 1543 246.9" id="curve" />
        <text width="100%" style="transform: translate3d(0,0,0);">
          <textPath style="transform: translate3d(0,0,0);" alignment-baseline="top" href="#curve" startOffset="-52%">
            {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
          </textPath>
        </text>
      </svg>

      <div class="marquee-overlay"></div>
    </div>
  </div>
</section>

<style>
.stage-container {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 360px;
}

/* === MARQUEE STRUCTURE === */
.marquee {
  z-index: 2;
  width: 100%;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  overflow-x: clip;
}

.marquee-inner {
  position: relative;
  display: grid;
  overflow: visible;
  height: 100%;
}

.marquee-inner svg {
  backface-visibility: hidden;
  overflow: visible;
}

/* === BACKGROUND BAND === */
.marquee-bg-svg {
  z-index: 0;
  width: 100%;
}

/* === TEXT PATH === */
.marquee-text-svg {
  z-index: 1;
  grid-area: 1 / 1 / 1 / 1;
  margin-top: 8.5em;
}

.marquee-text-svg text {
  fill: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
  font-weight: 800;
  letter-spacing: 2px;
  text-transform: uppercase;
  white-space: nowrap;
}

@media (max-width: 768px) {
  .marquee-text-svg text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<!-- GSAP Animation (continuous marquee motion) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const textPath = document.querySelector(".marquee-text-svg textPath");
  if (!textPath) return;

  // Continuous marquee animation identical to Matcha
  gsap.to(textPath, {
    attr: { startOffset: "150%" },
    duration: {{ section.settings.speed }},
    ease: "none",
    repeat: -1
  });
});
</script>

{% schema %}
{
  "name": "Matcha Ribbon Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll Speed (seconds per loop)",
      "min": 5,
      "max": 40,
      "default": 20
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon (Stroke) Color",
      "default": "#204C2A"
    }
  ],
  "presets": [
    { "name": "Matcha Ribbon Divider (Exact Replica)" }
  ]
}
{% endschema %}
