<section class="stage-container">
  <div data-marquee class="marquee">
    <div class="marquee-inner">

      <!-- Background Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 450" width="100%" class="marquee-bg-svg">
        <path fill="{{ section.settings.ribbon_color }}"
          d="M-50 330C200 250 550 180 900 200C1150 215 1350 260 1500 290L1500 450L-50 450Z" />
      </svg>

      <!-- Text Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 450" width="100%" class="marquee-text-svg">
        <path id="textWave"
          d="M-50 295C200 220 550 230 900 250C1150 265 1350 280 1500 300"
          fill="none" />
        <text fill="{{ section.settings.text_color }}" font-size="{{ section.settings.font_size }}" font-weight="800"
          letter-spacing="2" text-anchor="middle" dominant-baseline="middle">
          <textPath href="#textWave" startOffset="50%">
            {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
          </textPath>
        </text>
      </svg>

    </div>
  </div>
</section>

<style>
.stage-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  height: 320px;
}

.marquee {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.marquee-inner {
  position: relative;
  width: 100%;
  height: 100%;
}

.marquee-bg-svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
}

.marquee-text-svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 2;
}

text {
  text-transform: uppercase;
  white-space: nowrap;
}

@media (max-width: 768px) {
  text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<!-- GSAP continuous marquee scroll -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const textPath = document.querySelector(".marquee-text-svg textPath");
  gsap.to(textPath, {
    attr: { startOffset: "150%" },
    duration: 20,
    repeat: -1,
    ease: "none"
  });
});
</script>

{% schema %}
{
  "name": "Matcha Ribbon Divider ",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon Color",
      "default": "#204C2A"
    }
  ],
  "presets": [
    { "name": "Matcha Ribbon Divider (Exact Replica)" }
  ]
}
{% endschema %}
