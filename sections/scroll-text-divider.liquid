<section class="scroll-divider-section">
  <div class="scroll-divider-bg">
    <div class="scroll-bg-top"></div>
    <div class="scroll-bg-bottom"></div>
  </div>

  <svg class="scroll-divider-svg" viewBox="0 0 1600 200" preserveAspectRatio="xMidYMid slice">
    <path id="scrollTextPath" fill="none" d="M0,120 Q800,60 1600,120" />
    <text class="scroll-divider-text" fill="{{ section.settings.text_color }}" font-size="{{ section.settings.font_size }}">
      <textPath href="#scrollTextPath" startOffset="0%">
        {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
      </textPath>
    </text>
  </svg>
</section>

<style>
.scroll-divider-section {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 220px;
}

.scroll-divider-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.scroll-bg-top, .scroll-bg-bottom {
  position: absolute;
  width: 100%;
  height: 50%;
  left: 0;
}

.scroll-bg-top {
  top: 0;
  background: {{ section.settings.top_bg_color }};
}

.scroll-bg-bottom {
  bottom: 0;
  background: {{ section.settings.bottom_bg_color }};
}

.scroll-divider-svg {
  position: relative;
  width: 100%;
  height: 220px;
  z-index: 2;
}

.scroll-divider-text {
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 2px;
  white-space: nowrap;
  width: 100%;
}

@media (max-width: 768px) {
  .scroll-divider-text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  gsap.registerPlugin(ScrollTrigger);

  const text = document.querySelector(".scroll-divider-text textPath");

  gsap.to(text, {
    attr: { startOffset: "-100%" },
    ease: "none",
    scrollTrigger: {
      trigger: ".scroll-divider-section",
      start: "top bottom",
      end: "bottom top",
      scrub: true
    }
  });
});
</script>

{% schema %}
{
  "name": " Scroll Text Divider ",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#204C2A"
    },
    {
      "type": "color",
      "id": "top_bg_color",
      "label": "Top Background Color",
      "default": "#E5EED8"
    },
    {
      "type": "color",
      "id": "bottom_bg_color",
      "label": "Bottom Background Color",
      "default": "#DCE8C4"
    }
  ],
  "presets": [
    {
      "name": "Curved Scroll Text Divider (Full Width)"
    }
  ]
}
{% endschema %}
