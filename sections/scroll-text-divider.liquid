<section class="stage-container">
  <div data-marquee class="marquee">
    <div class="marquee-inner">
      
      <!-- Background Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 442" width="100%" class="marquee-bg-svg">
        <path fill="{{ section.settings.ribbon_color }}" d="M-71 371.6C126.3 260 593.5 65.8 934.5 80.8C1313 98 1507 160 1700 180L1700 442L-71 442Z" />
      </svg>

      <!-- Text Wave -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 293" width="100%" class="marquee-text-svg">
        <path id="textWave" d="M0 200C350 120 700 280 1440 200" fill="none" />
        <text fill="{{ section.settings.text_color }}" font-size="{{ section.settings.font_size }}" font-weight="800" letter-spacing="2" text-anchor="middle">
          <textPath href="#textWave" startOffset="50%">
            {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
          </textPath>
        </text>
      </svg>

      <div class="marquee-overlay"></div>
    </div>
  </div>
</section>

<style>
.stage-container {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 300px;
}

.marquee {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.marquee-inner {
  position: relative;
  width: 100%;
  height: 100%;
}

.marquee-bg-svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
}

.marquee-text-svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 2;
}

text {
  text-transform: uppercase;
  white-space: nowrap;
}

@media (max-width: 768px) {
  text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<!-- GSAP horizontal scroll -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const textPath = document.querySelector(".marquee-text-svg textPath");
  
  gsap.to(textPath, {
    attr: { startOffset: "150%" },
    repeat: -1,
    duration: 20,
    ease: "none"
  });
});
</script>

{% schema %}
{
  "name": "Matcha Wave Ribbon",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon Color",
      "default": "#204C2A"
    }
  ],
  "presets": [
    { "name": "Matcha Wave Ribbon (Exact Replica)" }
  ]
}
{% endschema %}
