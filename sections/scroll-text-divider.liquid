{% comment %}
== CURVED SCROLLING TEXT DIVIDER ==
- Editable text via theme editor
- Scrolls horizontally as user scrolls
- Styled to match "IT’S A MATCH(A)" aesthetic
{% endcomment %}

<section class="scroll-divider-section">
  <div class="scroll-divider-wrapper">
    <div class="scroll-divider-text">
      <span>{{ section.settings.text }}</span>
      <span>{{ section.settings.text }}</span>
      <span>{{ section.settings.text }}</span>
    </div>
  </div>
</section>

<style>
.scroll-divider-section {
  background: {{ section.settings.bg_color }};
  overflow: hidden;
  padding: 60px 0;
  position: relative;
}

.scroll-divider-wrapper {
  position: relative;
  width: 100%;
  transform: rotate(-3deg); /* tilt for curved look */
}

.scroll-divider-text {
  display: flex;
  white-space: nowrap;
  font-size: {{ section.settings.font_size }}px;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: {{ section.settings.text_color }};
  animation: scrollText 20s linear infinite;
}

.scroll-divider-text span {
  margin-right: 4rem;
}

@keyframes scrollText {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-50%);
  }
}

/* Responsive tweaks */
@media (max-width: 768px) {
  .scroll-divider-text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

{% schema %}
{
  "name": "Scrolling Text Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#204C2A"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#E5EED8"
    }
  ],
  "presets": [
    {
      "name": "Scrolling Text Divider"
    }
  ]
}
{% endschema %}
