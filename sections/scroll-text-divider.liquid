<section class="scroll-divider-section">
  <!-- Split background -->
  <div class="scroll-bg-top"></div>
  <div class="scroll-bg-bottom"></div>

  <!-- Curved ribbon & text -->
  <svg class="scroll-divider-svg" viewBox="0 0 1600 200" preserveAspectRatio="xMidYMid slice">
    <!-- Ribbon shape -->
    <path id="ribbon-path" fill="{{ section.settings.ribbon_color }}" d="M0,120 Q800,60 1600,120 L1600,160 Q800,100 0,160Z" />
    <!-- Text path (slightly above center of ribbon) -->
    <path id="text-path" fill="none" d="M0,120 Q800,60 1600,120" />
    <text class="scroll-divider-text" fill="{{ section.settings.text_color }}" font-size="{{ section.settings.font_size }}">
      <textPath href="#text-path" startOffset="0%">
        {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
      </textPath>
    </text>
  </svg>
</section>

<style>
.scroll-divider-section {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 220px;
}

/* Split BG */
.scroll-bg-top,
.scroll-bg-bottom {
  position: absolute;
  width: 100%;
  height: 50%;
  left: 0;
  z-index: 0;
}
.scroll-bg-top {
  top: 0;
  background: {{ section.settings.top_bg_color }};
}
.scroll-bg-bottom {
  bottom: 0;
  background: {{ section.settings.bottom_bg_color }};
}

/* SVG Layer */
.scroll-divider-svg {
  width: 100%;
  height: 220px;
  position: relative;
  z-index: 2;
}

/* Text styling */
.scroll-divider-text {
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 2px;
  white-space: nowrap;
}

@media (max-width: 768px) {
  .scroll-divider-text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  gsap.registerPlugin(ScrollTrigger);

  const text = document.querySelector(".scroll-divider-text textPath");

  gsap.to(text, {
    attr: { startOffset: "100%" }, // left → right scroll
    ease: "none",
    scrollTrigger: {
      trigger: ".scroll-divider-section",
      start: "top bottom",
      end: "bottom top",
      scrub: true
    }
  });
});
</script>

{% schema %}
{
  "name": "Ribbon Scroll Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Divider Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon Color",
      "default": "#204C2A"
    },
    {
      "type": "color",
      "id": "top_bg_color",
      "label": "Top Background Color",
      "default": "#E5EED8"
    },
    {
      "type": "color",
      "id": "bottom_bg_color",
      "label": "Bottom Background Color",
      "default": "#DCE8C4"
    }
  ],
  "presets": [
    {
      "name": "Curved Ribbon Scroll Divider"
    }
  ]
}
{% endschema %}
