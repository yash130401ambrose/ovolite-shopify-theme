<section class="stage-container">
  <div data-marquee class="marquee">
    <div class="marquee-inner">
      
      <!-- Background Curve -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 442" width="100%" style="overflow: visible;" class="marquee-bg-svg">
        <path stroke="{{ section.settings.ribbon_color }}" stroke-width="160" d="M0 260C400 180 900 100 1440 200" />
      </svg>

      <!-- Text on Curve -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1440 200" width="100%" style="overflow: visible;" data-marquee-svg class="marquee-text-svg">
        <defs>
          <path id="text-curve" d="M0,160 C400,120 900,80 1440,160" />
        </defs>
        <text width="100%">
          <textPath href="#text-curve" startOffset="0%">
            {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }} • {{ section.settings.text }}
          </textPath>
        </text>
      </svg>

    </div>
  </div>
</section>

<style>
.stage-container {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 300px;
}

/* MARQUEE STRUCTURE */
.marquee {
  z-index: 2;
  width: 100%;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  overflow-x: clip;
}

.marquee-inner {
  position: relative;
  display: grid;
  overflow: visible;
  height: 100%;
}

.marquee-inner svg {
  backface-visibility: hidden;
  overflow: visible;
}

/* BACKGROUND BAND */
.marquee-bg-svg {
  z-index: 0;
  width: 100%;
  position: relative;
}

/* TEXT PATH */
.marquee-text-svg {
  z-index: 1;
  grid-area: 1 / 1 / 1 / 1;
  margin-top: 4em;
}

.marquee-text-svg text {
  fill: {{ section.settings.text_color }};
  font-size: {{ section.settings.font_size }}px;
  font-weight: 800;
  text-transform: uppercase;
  white-space: nowrap;
}

@media (max-width: 768px) {
  .marquee-text-svg text {
    font-size: calc({{ section.settings.font_size }}px * 0.7);
  }
}
</style>

<!-- GSAP Continuous Motion -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const textPath = document.querySelector(".marquee-text-svg textPath");
  if (!textPath) return;

  gsap.fromTo(textPath, 
    { attr: { startOffset: "0%" } }, 
    { 
      attr: { startOffset: "100%" }, 
      duration: {{ section.settings.speed }}, 
      ease: "none", 
      repeat: -1 
    }
  );
});
</script>

{% schema %}
{
  "name": "Curved Ribbon Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Ribbon Text",
      "default": "IT’S A MATCH(A)"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 20,
      "max": 120,
      "default": 72
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll Speed (seconds per loop)",
      "min": 5,
      "max": 40,
      "default": 20
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#A5D6A7"
    },
    {
      "type": "color",
      "id": "ribbon_color",
      "label": "Ribbon (Stroke) Color",
      "default": "#204C2A"
    }
  ],
  "presets": [
    { "name": "Curved Ribbon Divider (Fixed)" }
  ]
}
{% endschema %}
